{
  "id": 70,
  "nom": {
    "ar": "المعارج",
    "phonetique": "al-Ma'arij",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "سَأَلَ سَآئِلٌۢ بِعَذَابٍۢ وَاقِعٍۢ"
    },
    {
      "numero": 2,
      "texte_ar": "لِّلْكَٰفِرِينَ لَيْسَ لَهُۥ دَافِعٌۭ"
    },
    {
      "numero": 3,
      "texte_ar": "مِّنَ ٱللَّهِ ذِى ٱلْمَعَارِجِ"
    },
    {
      "numero": 4,
      "texte_ar": "تَعْرُجُ ٱلْمَلَٰٓئِكَةُ وَٱلرُّوحُ إِلَيْهِ فِى يَوْمٍۢ كَانَ مِقْدَارُهُۥ خَمْسِينَ أَلْفَ سَنَةٍۢ"
    },
    {
      "numero": 5,
      "texte_ar": "فَٱصْبِرْ صَبْرًۭا جَمِيلًا"
    },
    {
      "numero": 6,
      "texte_ar": "إِنَّهُمْ يَرَوْنَهُۥ بَعِيدًۭا"
    },
    {
      "numero": 7,
      "texte_ar": "وَنَرَىٰهُ قَرِيبًۭا"
    },
    {
      "numero": 8,
      "texte_ar": "يَوْمَ تَكُونُ ٱلسَّمَآءُ كَٱلْمُهْلِ"
    },
    {
      "numero": 9,
      "texte_ar": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ"
    },
    {
      "numero": 10,
      "texte_ar": "وَلَا يَسْـَٔلُ حَمِيمٌ حَمِيمًۭا"
    },
    {
      "numero": 11,
      "texte_ar": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ ٱلْمُجْرِمُ لَوْ يَفْتَدِى مِنْ عَذَابِ يَوْمِئِذٍۭ بِبَنِيهِ"
    },
    {
      "numero": 12,
      "texte_ar": "وَصَٰحِبَتِهِۦ وَأَخِيهِ"
    },
    {
      "numero": 13,
      "texte_ar": "وَفَصِيلَتِهِ ٱلَّتِى تُـْٔوِيهِ"
    },
    {
      "numero": 14,
      "texte_ar": "وَمَن فِى ٱلْأَرْضِ جَمِيعًۭا ثُمَّ يُنجِيهِ"
    },
    {
      "numero": 15,
      "texte_ar": "كَلَّآ ۖ إِنَّهَا لَظَىٰ"
    },
    {
      "numero": 16,
      "texte_ar": "نَزَّاعَةًۭ لِّلشَّوَىٰ"
    },
    {
      "numero": 17,
      "texte_ar": "تَدْعُوا۟ مَنْ أَدْبَرَ وَتَوَلَّىٰ"
    },
    {
      "numero": 18,
      "texte_ar": "وَجَمَعَ فَأَوْعَىٰٓ"
    },
    {
      "numero": 19,
      "texte_ar": "۞ إِنَّ ٱلْإِنسَٰنَ خُلِقَ هَلُوعًا"
    },
    {
      "numero": 20,
      "texte_ar": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعًۭا"
    },
    {
      "numero": 21,
      "texte_ar": "وَإِذَا مَسَّهُ ٱلْخَيْرُ مَنُوعًا"
    },
    {
      "numero": 22,
      "texte_ar": "إِلَّا ٱلْمُصَلِّينَ"
    },
    {
      "numero": 23,
      "texte_ar": "ٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَآئِمُونَ"
    },
    {
      "numero": 24,
      "texte_ar": "وَٱلَّذِينَ فِىٓ أَمْوَٰلِهِمْ حَقٌّۭ مَّعْلُومٌۭ"
    },
    {
      "numero": 25,
      "texte_ar": "لِّلسَّآئِلِ وَٱلْمَحْرُومِ"
    },
    {
      "numero": 26,
      "texte_ar": "وَٱلَّذِينَ يُصَدِّقُونَ بِيَوْمِ ٱلدِّينِ"
    },
    {
      "numero": 27,
      "texte_ar": "وَٱلَّذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ"
    },
    {
      "numero": 28,
      "texte_ar": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍۢ"
    },
    {
      "numero": 29,
      "texte_ar": "وَٱلَّذِينَ هُمْ لِفُرُوجِهِمْ حَٰفِظُونَ"
    },
    {
      "numero": 30,
      "texte_ar": "إِلَّا عَلَىٰٓ أَزْوَٰجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَٰنُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ"
    },
    {
      "numero": 31,
      "texte_ar": "فَمَنِ ٱبْتَغَىٰ وَرَآءَ ذَٰلِكَ فَأُو۟لَٰٓئِكَ هُمُ ٱلْعَادُونَ"
    },
    {
      "numero": 32,
      "texte_ar": "وَٱلَّذِينَ هُمْ لِأَمَٰنَٰتِهِمْ وَعَهْدِهِمْ رَٰعُونَ"
    },
    {
      "numero": 33,
      "texte_ar": "وَٱلَّذِينَ هُم بِشَهَٰدَٰتِهِمْ قَآئِمُونَ"
    },
    {
      "numero": 34,
      "texte_ar": "وَٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ"
    },
    {
      "numero": 35,
      "texte_ar": "أُو۟لَٰٓئِكَ فِى جَنَّٰتٍۢ مُّكْرَمُونَ"
    },
    {
      "numero": 36,
      "texte_ar": "فَمَالِ ٱلَّذِينَ كَفَرُوا۟ قِبَلَكَ مُهْطِعِينَ"
    },
    {
      "numero": 37,
      "texte_ar": "عَنِ ٱلْيَمِينِ وَعَنِ ٱلشِّمَالِ عِزِينَ"
    },
    {
      "numero": 38,
      "texte_ar": "أَيَطْمَعُ كُلُّ ٱمْرِئٍۢ مِّنْهُمْ أَن يُدْخَلَ جَنَّةَ نَعِيمٍۢ"
    },
    {
      "numero": 39,
      "texte_ar": "كَلَّآ ۖ إِنَّا خَلَقْنَٰهُم مِّمَّا يَعْلَمُونَ"
    },
    {
      "numero": 40,
      "texte_ar": "فَلَآ أُقْسِمُ بِرَبِّ ٱلْمَشَٰرِقِ وَٱلْمَغَٰرِبِ إِنَّا لَقَٰدِرُونَ"
    },
    {
      "numero": 41,
      "texte_ar": "عَلَىٰٓ أَن نُّبَدِّلَ خَيْرًۭا مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ"
    },
    {
      "numero": 42,
      "texte_ar": "فَذَرْهُمْ يَخُوضُوا۟ وَيَلْعَبُوا۟ حَتَّىٰ يُلَٰقُوا۟ يَوْمَهُمُ ٱلَّذِى يُوعَدُونَ"
    },
    {
      "numero": 43,
      "texte_ar": "يَوْمَ يَخْرُجُونَ مِنَ ٱلْأَجْدَاثِ سِرَاعًۭا كَأَنَّهُمْ إِلَىٰ نُصُبٍۢ يُوفِضُونَ"
    },
    {
      "numero": 44,
      "texte_ar": "خَٰشِعَةً أَبْصَٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٌۭ ۚ ذَٰلِكَ ٱلْيَوْمُ ٱلَّذِى كَانُوا۟ يُوعَدُونَ"
    }
  ]
}