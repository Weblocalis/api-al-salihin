{
  "id": 68,
  "nom": {
    "ar": "القلم",
    "phonetique": "al-Qalam",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "نٓ ۚ وَٱلْقَلَمِ وَمَا يَسْطُرُونَ"
    },
    {
      "numero": 2,
      "texte_ar": "مَآ أَنتَ بِنِعْمَةِ رَبِّكَ بِمَجْنُونٍۢ"
    },
    {
      "numero": 3,
      "texte_ar": "وَإِنَّ لَكَ لَأَجْرًا غَيْرَ مَمْنُونٍۢ"
    },
    {
      "numero": 4,
      "texte_ar": "وَإِنَّكَ لَعَلَىٰ خُلُقٍ عَظِيمٍۢ"
    },
    {
      "numero": 5,
      "texte_ar": "فَسَتُبْصِرُ وَيُبْصِرُونَ"
    },
    {
      "numero": 6,
      "texte_ar": "بِأَييِّكُمُ ٱلْمَفْتُونُ"
    },
    {
      "numero": 7,
      "texte_ar": "إِنَّ رَبَّكَ هُوَ أَعْلَمُ بِمَن ضَلَّ عَن سَبِيلِهِۦ وَهُوَ أَعْلَمُ بِٱلْمُهْتَدِينَ"
    },
    {
      "numero": 8,
      "texte_ar": "فَلَا تُطِعِ ٱلْمُكَذِّبِينَ"
    },
    {
      "numero": 9,
      "texte_ar": "وَدُّوا۟ لَوْ تُدْهِنُ فَيُدْهِنُونَ"
    },
    {
      "numero": 10,
      "texte_ar": "وَلَا تُطِعْ كُلَّ حَلَّافٍۢ مَّهِينٍ"
    },
    {
      "numero": 11,
      "texte_ar": "هَمَّازٍۢ مَّشَّآءٍۭ بِنَمِيمٍۢ"
    },
    {
      "numero": 12,
      "texte_ar": "مَّنَّاعٍۢ لِّلْخَيْرِ مُعْتَدٍ أَثِيمٍ"
    },
    {
      "numero": 13,
      "texte_ar": "عُتُلٍّۭ بَعْدَ ذَٰلِكَ زَنِيمٍ"
    },
    {
      "numero": 14,
      "texte_ar": "أَن كَانَ ذَا مَالٍۢ وَبَنِينَ"
    },
    {
      "numero": 15,
      "texte_ar": "إِذَا تُتْلَىٰ عَلَيْهِ ءَايَٰتُنَا قَالَ أَسَٰطِيرُ ٱلْأَوَّلِينَ"
    },
    {
      "numero": 16,
      "texte_ar": "سَنَسِمُهُۥ عَلَى ٱلْخُرْطُومِ"
    },
    {
      "numero": 17,
      "texte_ar": "إِنَّا بَلَوْنَٰهُمْ كَمَا بَلَوْنَآ أَصْحَٰبَ ٱلْجَنَّةِ إِذْ أَقْسَمُوا۟ لَيَصْرِمُنَّهَا مُصْبِحِينَ"
    },
    {
      "numero": 18,
      "texte_ar": "وَلَا يَسْتَثْنُونَ"
    },
    {
      "numero": 19,
      "texte_ar": "فَطَافَ عَلَيْهَا طَآئِفٌۭ مِّن رَّبِّكَ وَهُمْ نَآئِمُونَ"
    },
    {
      "numero": 20,
      "texte_ar": "فَأَصْبَحَتْ كَٱلصَّرِيمِ"
    },
    {
      "numero": 21,
      "texte_ar": "فَتَنَادَوْا۟ مُصْبِحِينَ"
    },
    {
      "numero": 22,
      "texte_ar": "أَنِ ٱغْدُوا۟ عَلَىٰ حَرْثِكُمْ إِن كُنتُمْ صَٰرِمِينَ"
    },
    {
      "numero": 23,
      "texte_ar": "فَٱنطَلَقُوا۟ وَهُمْ يَتَخَٰفَتُونَ"
    },
    {
      "numero": 24,
      "texte_ar": "أَن لَّا يَدْخُلَنَّهَا ٱلْيَوْمَ عَلَيْكُم مِّسْكِينٌۭ"
    },
    {
      "numero": 25,
      "texte_ar": "وَغَدَوْا۟ عَلَىٰ حَرْدٍۢ قَٰدِرِينَ"
    },
    {
      "numero": 26,
      "texte_ar": "فَلَمَّا رَأَوْهَا قَالُوٓا۟ إِنَّا لَضَآلُّونَ"
    },
    {
      "numero": 27,
      "texte_ar": "بَلْ نَحْنُ مَحْرُومُونَ"
    },
    {
      "numero": 28,
      "texte_ar": "قَالَ أَوْسَطُهُمْ أَلَمْ أَقُل لَّكُمْ لَوْلَا تُسَبِّحُونَ"
    },
    {
      "numero": 29,
      "texte_ar": "قَالُوا۟ سُبْحَٰنَ رَبِّنَآ إِنَّا كُنَّا ظَٰلِمِينَ"
    },
    {
      "numero": 30,
      "texte_ar": "فَأَقْبَلَ بَعْضُهُمْ عَلَىٰ بَعْضٍۢ يَتَلَٰوَمُونَ"
    },
    {
      "numero": 31,
      "texte_ar": "قَالُوا۟ يَٰوَيْلَنَآ إِنَّا كُنَّا طَٰغِينَ"
    },
    {
      "numero": 32,
      "texte_ar": "عَسَىٰ رَبُّنَآ أَن يُبْدِلَنَا خَيْرًۭا مِّنْهَآ إِنَّآ إِلَىٰ رَبِّنَا رَٰغِبُونَ"
    },
    {
      "numero": 33,
      "texte_ar": "كَذَٰلِكَ ٱلْعَذَابُ ۖ وَلَعَذَابُ ٱلْءَاخِرَةِ أَكْبَرُ ۚ لَوْ كَانُوا۟ يَعْلَمُونَ"
    },
    {
      "numero": 34,
      "texte_ar": "إِنَّ لِلْمُتَّقِينَ عِندَ رَبِّهِمْ جَنَّٰتِ ٱلنَّعِيمِ"
    },
    {
      "numero": 35,
      "texte_ar": "أَفَنَجْعَلُ ٱلْمُسْلِمِينَ كَٱلْمُجْرِمِينَ"
    },
    {
      "numero": 36,
      "texte_ar": "مَا لَكُمْ كَيْفَ تَحْكُمُونَ"
    },
    {
      "numero": 37,
      "texte_ar": "أَمْ لَكُمْ كِتَٰبٌۭ فِيهِ تَدْرُسُونَ"
    },
    {
      "numero": 38,
      "texte_ar": "إِنَّ لَكُمْ فِيهِ لَمَا تَخَيَّرُونَ"
    },
    {
      "numero": 39,
      "texte_ar": "أَمْ لَكُمْ أَيْمَٰنٌ عَلَيْنَا بَٰلِغَةٌ إِلَىٰ يَوْمِ ٱلْقِيَٰمَةِ ۙ إِنَّ لَكُمْ لَمَا تَحْكُمُونَ"
    },
    {
      "numero": 40,
      "texte_ar": "سَلْهُمْ أَيُّهُم بِذَٰلِكَ زَعِيمٌ"
    },
    {
      "numero": 41,
      "texte_ar": "أَمْ لَهُمْ شُرَكَآءُ فَلْيَأْتُوا۟ بِشُرَكَآئِهِمْ إِن كَانُوا۟ صَٰدِقِينَ"
    },
    {
      "numero": 42,
      "texte_ar": "يَوْمَ يُكْشَفُ عَن سَاقٍۢ وَيُدْعَوْنَ إِلَى ٱلسُّجُودِ فَلَا يَسْتَطِيعُونَ"
    },
    {
      "numero": 43,
      "texte_ar": "خَٰشِعَةً أَبْصَٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٌۭ ۖ وَقَدْ كَانُوا۟ يُدْعَوْنَ إِلَى ٱلسُّجُودِ وَهُمْ سَٰلِمُونَ"
    },
    {
      "numero": 44,
      "texte_ar": "فَذَرْنِى وَمَن يُكَذِّبُ بِهَٰذَا ٱلْحَدِيثِ ۖ سَنَسْتَدْرِجُهُم مِّنْ حَيْثُ لَا يَعْلَمُونَ"
    },
    {
      "numero": 45,
      "texte_ar": "وَأُمْلِى لَهُمْ ۚ إِنَّ كَيْدِى مَتِينٌ"
    },
    {
      "numero": 46,
      "texte_ar": "أَمْ تَسْـَٔلُهُمْ أَجْرًۭا فَهُم مِّن مَّغْرَمٍۢ مُّثْقَلُونَ"
    },
    {
      "numero": 47,
      "texte_ar": "أَمْ عِندَهُمُ ٱلْغَيْبُ فَهُمْ يَكْتُبُونَ"
    },
    {
      "numero": 48,
      "texte_ar": "فَٱصْبِرْ لِحُكْمِ رَبِّكَ وَلَا تَكُن كَصَاحِبِ ٱلْحُوتِ إِذْ نَادَىٰ وَهُوَ مَكْظُومٌۭ"
    },
    {
      "numero": 49,
      "texte_ar": "لَّوْلَآ أَن تَدَٰرَكَهُۥ نِعْمَةٌۭ مِّن رَّبِّهِۦ لَنُبِذَ بِٱلْعَرَآءِ وَهُوَ مَذْمُومٌۭ"
    },
    {
      "numero": 50,
      "texte_ar": "فَٱجْتَبَٰهُ رَبُّهُۥ فَجَعَلَهُۥ مِنَ ٱلصَّٰلِحِينَ"
    },
    {
      "numero": 51,
      "texte_ar": "وَإِن يَكَادُ ٱلَّذِينَ كَفَرُوا۟ لَيُزْلِقُونَكَ بِأَبْصَٰرِهِمْ لَمَّا سَمِعُوا۟ ٱلذِّكْرَ وَيَقُولُونَ إِنَّهُۥ لَمَجْنُونٌۭ"
    },
    {
      "numero": 52,
      "texte_ar": "وَمَا هُوَ إِلَّا ذِكْرٌۭ لِّلْعَٰلَمِينَ"
    }
  ]
}