{
  "id": 81,
  "nom": {
    "ar": "التكوير",
    "phonetique": "at-Takwir",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "إِذَا ٱلشَّمْسُ كُوِّرَتْ"
    },
    {
      "numero": 2,
      "texte_ar": "وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتْ"
    },
    {
      "numero": 3,
      "texte_ar": "وَإِذَا ٱلْجِبَالُ سُيِّرَتْ"
    },
    {
      "numero": 4,
      "texte_ar": "وَإِذَا ٱلْعِشَارُ عُطِّلَتْ"
    },
    {
      "numero": 5,
      "texte_ar": "وَإِذَا ٱلْوُحُوشُ حُشِرَتْ"
    },
    {
      "numero": 6,
      "texte_ar": "وَإِذَا ٱلْبِحَارُ سُجِّرَتْ"
    },
    {
      "numero": 7,
      "texte_ar": "وَإِذَا ٱلنُّفُوسُ زُوِّجَتْ"
    },
    {
      "numero": 8,
      "texte_ar": "وَإِذَا ٱلْمَوْءُۥدَةُ سُئِلَتْ"
    },
    {
      "numero": 9,
      "texte_ar": "بِأَىِّ ذَنۢبٍۢ قُتِلَتْ"
    },
    {
      "numero": 10,
      "texte_ar": "وَإِذَا ٱلصُّحُفُ نُشِرَتْ"
    },
    {
      "numero": 11,
      "texte_ar": "وَإِذَا ٱلسَّمَآءُ كُشِطَتْ"
    },
    {
      "numero": 12,
      "texte_ar": "وَإِذَا ٱلْجَحِيمُ سُعِّرَتْ"
    },
    {
      "numero": 13,
      "texte_ar": "وَإِذَا ٱلْجَنَّةُ أُزْلِفَتْ"
    },
    {
      "numero": 14,
      "texte_ar": "عَلِمَتْ نَفْسٌۭ مَّآ أَحْضَرَتْ"
    },
    {
      "numero": 15,
      "texte_ar": "فَلَآ أُقْسِمُ بِٱلْخُنَّسِ"
    },
    {
      "numero": 16,
      "texte_ar": "ٱلْجَوَارِ ٱلْكُنَّسِ"
    },
    {
      "numero": 17,
      "texte_ar": "وَٱلَّيْلِ إِذَا عَسْعَسَ"
    },
    {
      "numero": 18,
      "texte_ar": "وَٱلصُّبْحِ إِذَا تَنَفَّسَ"
    },
    {
      "numero": 19,
      "texte_ar": "إِنَّهُۥ لَقَوْلُ رَسُولٍۢ كَرِيمٍۢ"
    },
    {
      "numero": 20,
      "texte_ar": "ذِى قُوَّةٍ عِندَ ذِى ٱلْعَرْشِ مَكِينٍۢ"
    },
    {
      "numero": 21,
      "texte_ar": "مُّطَاعٍۢ ثَمَّ أَمِينٍۢ"
    },
    {
      "numero": 22,
      "texte_ar": "وَمَا صَاحِبُكُم بِمَجْنُونٍۢ"
    },
    {
      "numero": 23,
      "texte_ar": "وَلَقَدْ رَءَاهُ بِٱلْأُفُقِ ٱلْمُبِينِ"
    },
    {
      "numero": 24,
      "texte_ar": "وَمَا هُوَ عَلَى ٱلْغَيْبِ بِضَنِينٍۢ"
    },
    {
      "numero": 25,
      "texte_ar": "وَمَا هُوَ بِقَوْلِ شَيْطَٰنٍۢ رَّجِيمٍۢ"
    },
    {
      "numero": 26,
      "texte_ar": "فَأَيْنَ تَذْهَبُونَ"
    },
    {
      "numero": 27,
      "texte_ar": "إِنْ هُوَ إِلَّا ذِكْرٌۭ لِّلْعَٰلَمِينَ"
    },
    {
      "numero": 28,
      "texte_ar": "لِمَن شَآءَ مِنكُمْ أَن يَسْتَقِيمَ"
    },
    {
      "numero": 29,
      "texte_ar": "وَمَا تَشَآءُونَ إِلَّآ أَن يَشَآءَ ٱللَّهُ رَبُّ ٱلْعَٰلَمِينَ"
    }
  ]
}