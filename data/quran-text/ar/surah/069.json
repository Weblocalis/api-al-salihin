{
  "id": 69,
  "nom": {
    "ar": "الحاقة",
    "phonetique": "al-Haqqah",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "ٱلْحَآقَّةُ"
    },
    {
      "numero": 2,
      "texte_ar": "مَا ٱلْحَآقَّةُ"
    },
    {
      "numero": 3,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا ٱلْحَآقَّةُ"
    },
    {
      "numero": 4,
      "texte_ar": "كَذَّبَتْ ثَمُودُ وَعَادٌۢ بِٱلْقَارِعَةِ"
    },
    {
      "numero": 5,
      "texte_ar": "فَأَمَّا ثَمُودُ فَأُهْلِكُوا۟ بِٱلطَّاغِيَةِ"
    },
    {
      "numero": 6,
      "texte_ar": "وَأَمَّا عَادٌۭ فَأُهْلِكُوا۟ بِرِيحٍۢ صَرْصَرٍ عَاتِيَةٍۢ"
    },
    {
      "numero": 7,
      "texte_ar": "سَخَّرَهَا عَلَيْهِمْ سَبْعَ لَيَالٍۢ وَثَمَٰنِيَةَ أَيَّامٍ حُسُومًۭا فَتَرَى ٱلْقَوْمَ فِيهَا صَرْعَىٰ كَأَنَّهُمْ أَعْجَازُ نَخْلٍ خَاوِيَةٍۢ"
    },
    {
      "numero": 8,
      "texte_ar": "فَهَلْ تَرَىٰ لَهُم مِّنۢ بَاقِيَةٍۢ"
    },
    {
      "numero": 9,
      "texte_ar": "وَجَآءَ فِرْعَوْنُ وَمَن قَبْلَهُۥ وَٱلْمُؤْتَفِكَٰتُ بِٱلْخَاطِئَةِ"
    },
    {
      "numero": 10,
      "texte_ar": "فَعَصَوْا۟ رَسُولَ رَبِّهِمْ فَأَخَذَهُمْ أَخْذَةًۭ رَّابِيَةً"
    },
    {
      "numero": 11,
      "texte_ar": "إِنَّا لَمَّا طَغَا ٱلْمَآءُ حَمَلْنَٰكُمْ فِى ٱلْجَارِيَةِ"
    },
    {
      "numero": 12,
      "texte_ar": "لِنَجْعَلَهَا لَكُمْ تَذْكِرَةًۭ وَتَعِيَهَآ أُذُنٌۭ وَٰعِيَةٌۭ"
    },
    {
      "numero": 13,
      "texte_ar": "فَإِذَا نُفِخَ فِى ٱلصُّورِ نَفْخَةٌۭ وَٰحِدَةٌۭ"
    },
    {
      "numero": 14,
      "texte_ar": "وَحُمِلَتِ ٱلْأَرْضُ وَٱلْجِبَالُ فَدُكَّتَا دَكَّةًۭ وَٰحِدَةًۭ"
    },
    {
      "numero": 15,
      "texte_ar": "فَيَوْمَئِذٍۢ وَقَعَتِ ٱلْوَاقِعَةُ"
    },
    {
      "numero": 16,
      "texte_ar": "وَٱنشَقَّتِ ٱلسَّمَآءُ فَهِىَ يَوْمَئِذٍۢ وَاهِيَةٌۭ"
    },
    {
      "numero": 17,
      "texte_ar": "وَٱلْمَلَكُ عَلَىٰٓ أَرْجَآئِهَا ۚ وَيَحْمِلُ عَرْشَ رَبِّكَ فَوْقَهُمْ يَوْمَئِذٍۢ ثَمَٰنِيَةٌۭ"
    },
    {
      "numero": 18,
      "texte_ar": "يَوْمَئِذٍۢ تُعْرَضُونَ لَا تَخْفَىٰ مِنكُمْ خَافِيَةٌۭ"
    },
    {
      "numero": 19,
      "texte_ar": "فَأَمَّا مَنْ أُوتِىَ كِتَٰبَهُۥ بِيَمِينِهِۦ فَيَقُولُ هَآؤُمُ ٱقْرَءُوا۟ كِتَٰبِيَهْ"
    },
    {
      "numero": 20,
      "texte_ar": "إِنِّى ظَنَنتُ أَنِّى مُلَٰقٍ حِسَابِيَهْ"
    },
    {
      "numero": 21,
      "texte_ar": "فَهُوَ فِى عِيشَةٍۢ رَّاضِيَةٍۢ"
    },
    {
      "numero": 22,
      "texte_ar": "فِى جَنَّةٍ عَالِيَةٍۢ"
    },
    {
      "numero": 23,
      "texte_ar": "قُطُوفُهَا دَانِيَةٌۭ"
    },
    {
      "numero": 24,
      "texte_ar": "كُلُوا۟ وَٱشْرَبُوا۟ هَنِيٓـًٔۢا بِمَآ أَسْلَفْتُمْ فِى ٱلْأَيَّامِ ٱلْخَالِيَةِ"
    },
    {
      "numero": 25,
      "texte_ar": "وَأَمَّا مَنْ أُوتِىَ كِتَٰبَهُۥ بِشِمَالِهِۦ فَيَقُولُ يَٰلَيْتَنِى لَمْ أُوتَ كِتَٰبِيَهْ"
    },
    {
      "numero": 26,
      "texte_ar": "وَلَمْ أَدْرِ مَا حِسَابِيَهْ"
    },
    {
      "numero": 27,
      "texte_ar": "يَٰلَيْتَهَا كَانَتِ ٱلْقَاضِيَةَ"
    },
    {
      "numero": 28,
      "texte_ar": "مَآ أَغْنَىٰ عَنِّى مَالِيَهْ ۜ"
    },
    {
      "numero": 29,
      "texte_ar": "هَلَكَ عَنِّى سُلْطَٰنِيَهْ"
    },
    {
      "numero": 30,
      "texte_ar": "خُذُوهُ فَغُلُّوهُ"
    },
    {
      "numero": 31,
      "texte_ar": "ثُمَّ ٱلْجَحِيمَ صَلُّوهُ"
    },
    {
      "numero": 32,
      "texte_ar": "ثُمَّ فِى سِلْسِلَةٍۢ ذَرْعُهَا سَبْعُونَ ذِرَاعًۭا فَٱسْلُكُوهُ"
    },
    {
      "numero": 33,
      "texte_ar": "إِنَّهُۥ كَانَ لَا يُؤْمِنُ بِٱللَّهِ ٱلْعَظِيمِ"
    },
    {
      "numero": 34,
      "texte_ar": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلْمِسْكِينِ"
    },
    {
      "numero": 35,
      "texte_ar": "فَلَيْسَ لَهُ ٱلْيَوْمَ هَٰهُنَا حَمِيمٌۭ"
    },
    {
      "numero": 36,
      "texte_ar": "وَلَا طَعَامٌ إِلَّا مِنْ غِسْلِينٍۢ"
    },
    {
      "numero": 37,
      "texte_ar": "لَّا يَأْكُلُهُۥٓ إِلَّا ٱلْخَٰطِـُٔونَ"
    },
    {
      "numero": 38,
      "texte_ar": "فَلَآ أُقْسِمُ بِمَا تُبْصِرُونَ"
    },
    {
      "numero": 39,
      "texte_ar": "وَمَا لَا تُبْصِرُونَ"
    },
    {
      "numero": 40,
      "texte_ar": "إِنَّهُۥ لَقَوْلُ رَسُولٍۢ كَرِيمٍۢ"
    },
    {
      "numero": 41,
      "texte_ar": "وَمَا هُوَ بِقَوْلِ شَاعِرٍۢ ۚ قَلِيلًۭا مَّا تُؤْمِنُونَ"
    },
    {
      "numero": 42,
      "texte_ar": "وَلَا بِقَوْلِ كَاهِنٍۢ ۚ قَلِيلًۭا مَّا تَذَكَّرُونَ"
    },
    {
      "numero": 43,
      "texte_ar": "تَنزِيلٌۭ مِّن رَّبِّ ٱلْعَٰلَمِينَ"
    },
    {
      "numero": 44,
      "texte_ar": "وَلَوْ تَقَوَّلَ عَلَيْنَا بَعْضَ ٱلْأَقَاوِيلِ"
    },
    {
      "numero": 45,
      "texte_ar": "لَأَخَذْنَا مِنْهُ بِٱلْيَمِينِ"
    },
    {
      "numero": 46,
      "texte_ar": "ثُمَّ لَقَطَعْنَا مِنْهُ ٱلْوَتِينَ"
    },
    {
      "numero": 47,
      "texte_ar": "فَمَا مِنكُم مِّنْ أَحَدٍ عَنْهُ حَٰجِزِينَ"
    },
    {
      "numero": 48,
      "texte_ar": "وَإِنَّهُۥ لَتَذْكِرَةٌۭ لِّلْمُتَّقِينَ"
    },
    {
      "numero": 49,
      "texte_ar": "وَإِنَّا لَنَعْلَمُ أَنَّ مِنكُم مُّكَذِّبِينَ"
    },
    {
      "numero": 50,
      "texte_ar": "وَإِنَّهُۥ لَحَسْرَةٌ عَلَى ٱلْكَٰفِرِينَ"
    },
    {
      "numero": 51,
      "texte_ar": "وَإِنَّهُۥ لَحَقُّ ٱلْيَقِينِ"
    },
    {
      "numero": 52,
      "texte_ar": "فَسَبِّحْ بِٱسْمِ رَبِّكَ ٱلْعَظِيمِ"
    }
  ]
}