  "nom": {
    "ar": "المرسلات",
    "phonetique": "al-Mursalat",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَٱلْمُرْسَلَٰتِ عُرْفًۭا"
    },
    {
      "numero": 2,
      "texte_ar": "فَٱلْعَٰصِفَٰتِ عَصْفًۭا"
    },
    {
      "numero": 3,
      "texte_ar": "وَٱلنَّٰشِرَٰتِ نَشْرًۭا"
    },
    {
      "numero": 4,
      "texte_ar": "فَٱلْفَٰرِقَٰتِ فَرْقًۭا"
    },
    {
      "numero": 5,
      "texte_ar": "فَٱلْمُلْقِيَٰتِ ذِكْرًا"
    },
    {
      "numero": 6,
      "texte_ar": "عُذْرًا أَوْ نُذْرًا"
    },
    {
      "numero": 7,
      "texte_ar": "إِنَّمَا تُوعَدُونَ لَوَٰقِعٌۭ"
    },
    {
      "numero": 8,
      "texte_ar": "فَإِذَا ٱلنُّجُومُ طُمِسَتْ"
    },
    {
      "numero": 9,
      "texte_ar": "وَإِذَا ٱلسَّمَآءُ فُرِجَتْ"
    },
    {
      "numero": 10,
      "texte_ar": "وَإِذَا ٱلْجِبَالُ نُسِفَتْ"
    },
    {
      "numero": 11,
      "texte_ar": "وَإِذَا ٱلرُّسُلُ أُقِّتَتْ"
    },
    {
      "numero": 12,
      "texte_ar": "لِأَىِّ يَوْمٍ أُجِّلَتْ"
    },
    {
      "numero": 13,
      "texte_ar": "لِيَوْمِ ٱلْفَصْلِ"
    },
    {
      "numero": 14,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلْفَصْلِ"
    },
    {
      "numero": 15,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 16,
      "texte_ar": "أَلَمْ نُهْلِكِ ٱلْأَوَّلِينَ"
    },
    {
      "numero": 17,
      "texte_ar": "ثُمَّ نُتْبِعُهُمُ ٱلْءَاخِرِينَ"
    },
    {
      "numero": 18,
      "texte_ar": "كَذَٰلِكَ نَفْعَلُ بِٱلْمُجْرِمِينَ"
    },
    {
      "numero": 19,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 20,
      "texte_ar": "أَلَمْ نَخْلُقكُّم مِّن مَّآءٍۢ مَّهِينٍۢ"
    },
    {
      "numero": 21,
      "texte_ar": "فَجَعَلْنَٰهُ فِى قَرَارٍۢ مَّكِينٍ"
    },
    {
      "numero": 22,
      "texte_ar": "إِلَىٰ قَدَرٍۢ مَّعْلُومٍۢ"
    },
    {
      "numero": 23,
      "texte_ar": "فَقَدَرْنَا فَنِعْمَ ٱلْقَٰدِرُونَ"
    },
    {
      "numero": 24,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 25,
      "texte_ar": "أَلَمْ نَجْعَلِ ٱلْأَرْضَ كِفَاتًا"
    },
    {
      "numero": 26,
      "texte_ar": "أَحْيَآءًۭ وَأَمْوَٰتًۭا"
    },
    {
      "numero": 27,
      "texte_ar": "وَجَعَلْنَا فِيهَا رَوَٰسِىَ شَٰمِخَٰتٍۢ وَأَسْقَيْنَٰكُم مَّآءًۭ فُرَاتًۭا"
    },
    {
      "numero": 28,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 29,
      "texte_ar": "ٱنطَلِقُوٓا۟ إِلَىٰ مَا كُنتُم بِهِۦ تُكَذِّبُونَ"
    },
    {
      "numero": 30,
      "texte_ar": "ٱنطَلِقُوٓا۟ إِلَىٰ ظِلٍّۢ ذِى ثَلَٰثِ شُعَبٍۢ"
    },
    {
      "numero": 31,
      "texte_ar": "لَّا ظَلِيلٍۢ وَلَا يُغْنِى مِنَ ٱللَّهَبِ"
    },
    {
      "numero": 32,
      "texte_ar": "إِنَّهَا تَرْمِى بِشَرَرٍۢ كَٱلْقَصْرِ"
    },
    {
      "numero": 33,
      "texte_ar": "كَأَنَّهُۥ جِمَٰلَتٌۭ صُفْرٌۭ"
    },
    {
      "numero": 34,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 35,
      "texte_ar": "هَٰذَا يَوْمُ لَا يَنطِقُونَ"
    },
    {
      "numero": 36,
      "texte_ar": "وَلَا يُؤْذَنُ لَهُمْ فَيَعْتَذِرُونَ"
    },
    {
      "numero": 37,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 38,
      "texte_ar": "هَٰذَا يَوْمُ ٱلْفَصْلِ ۖ جَمَعْنَٰكُمْ وَٱلْأَوَّلِينَ"
    },
    {
      "numero": 39,
      "texte_ar": "فَإِن كَانَ لَكُمْ كَيْدٌۭ فَكِيدُونِ"
    },
    {
      "numero": 40,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 41,
      "texte_ar": "إِنَّ ٱلْمُتَّقِينَ فِى ظِلَٰلٍۢ وَعُيُونٍۢ"
    },
    {
      "numero": 42,
      "texte_ar": "وَفَوَٰكِهَ مِمَّا يَشْتَهُونَ"
    },
    {
      "numero": 43,
      "texte_ar": "كُلُوا۟ وَٱشْرَبُوا۟ هَنِيٓـًٔۢا بِمَا كُنتُمْ تَعْمَلُونَ"
    },
    {
      "numero": 44,
      "texte_ar": "إِنَّا كَذَٰلِكَ نَجْزِى ٱلْمُحْسِنِينَ"
    },
    {
      "numero": 45,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 46,
      "texte_ar": "كُلُوا۟ وَتَمَتَّعُوا۟ قَلِيلًا إِنَّكُم مُّجْرِمُونَ"
    },
    {
      "numero": 47,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 48,
      "texte_ar": "وَإِذَا قِيلَ لَهُمُ ٱرْكَعُوا۟ لَا يَرْكَعُونَ"
    },
    {
      "numero": 49,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 50,
      "texte_ar": "فَبِأَىِّ حَدِيثٍۭ بَعْدَهُۥ يُؤْمِنُونَ"
    }
  ]
}