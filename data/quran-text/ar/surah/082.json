{
  "id": 82,
  "nom": {
    "ar": "الإنفطار",
    "phonetique": "al-Infithar",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "إِذَا ٱلسَّمَآءُ ٱنفَطَرَتْ"
    },
    {
      "numero": 2,
      "texte_ar": "وَإِذَا ٱلْكَوَاكِبُ ٱنتَثَرَتْ"
    },
    {
      "numero": 3,
      "texte_ar": "وَإِذَا ٱلْبِحَارُ فُجِّرَتْ"
    },
    {
      "numero": 4,
      "texte_ar": "وَإِذَا ٱلْقُبُورُ بُعْثِرَتْ"
    },
    {
      "numero": 5,
      "texte_ar": "عَلِمَتْ نَفْسٌۭ مَّا قَدَّمَتْ وَأَخَّرَتْ"
    },
    {
      "numero": 6,
      "texte_ar": "يَٰٓأَيُّهَا ٱلْإِنسَٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلْكَرِيمِ"
    },
    {
      "numero": 7,
      "texte_ar": "ٱلَّذِى خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ"
    },
    {
      "numero": 8,
      "texte_ar": "فِىٓ أَىِّ صُورَةٍۢ مَّا شَآءَ رَكَّبَكَ"
    },
    {
      "numero": 9,
      "texte_ar": "كَلَّا بَلْ تُكَذِّبُونَ بِٱلدِّينِ"
    },
    {
      "numero": 10,
      "texte_ar": "وَإِنَّ عَلَيْكُمْ لَحَٰفِظِينَ"
    },
    {
      "numero": 11,
      "texte_ar": "كِرَامًۭا كَٰتِبِينَ"
    },
    {
      "numero": 12,
      "texte_ar": "يَعْلَمُونَ مَا تَفْعَلُونَ"
    },
    {
      "numero": 13,
      "texte_ar": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍۢ"
    },
    {
      "numero": 14,
      "texte_ar": "وَإِنَّ ٱلْفُجَّارَ لَفِى جَحِيمٍۢ"
    },
    {
      "numero": 15,
      "texte_ar": "يَصْلَوْنَهَا يَوْمَ ٱلدِّينِ"
    },
    {
      "numero": 16,
      "texte_ar": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَ"
    },
    {
      "numero": 17,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ"
    },
    {
      "numero": 18,
      "texte_ar": "ثُمَّ مَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ"
    },
    {
      "numero": 19,
      "texte_ar": "يَوْمَ لَا تَمْلِكُ نَفْسٌۭ لِّنَفْسٍۢ شَيْـًۭٔا ۖ وَٱلْأَمْرُ يَوْمَئِذٍۢ لِّلَّهِ"
    }
  ]
}