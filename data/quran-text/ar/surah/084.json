  "id": 84,
  "nom": {
    "ar": "الإنشقاق",
    "phonetique": "Al-Inshiqaq",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "إِذَا ٱلسَّمَآءُ ٱنشَقَّتْ"
    },
    {
      "numero": 2,
      "texte_ar": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ"
    },
    {
      "numero": 3,
      "texte_ar": "وَإِذَا ٱلْأَرْضُ مُدَّتْ"
    },
    {
      "numero": 4,
      "texte_ar": "وَأَلْقَتْ مَا فِيهَا وَتَخَلَّتْ"
    },
    {
      "numero": 5,
      "texte_ar": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ"
    },
    {
      "numero": 6,
      "texte_ar": "يَٰٓأَيُّهَا ٱلْإِنسَٰنُ إِنَّكَ كَادِحٌ إِلَىٰ رَبِّكَ كَدْحًۭا فَمُلَٰقِيهِ"
    },
    {
      "numero": 7,
      "texte_ar": "فَأَمَّا مَنْ أُوتِىَ كِتَٰبَهُۥ بِيَمِينِهِۦ"
    },
    {
      "numero": 8,
      "texte_ar": "فَسَوْفَ يُحَاسَبُ حِسَابًۭا يَسِيرًۭا"
    },
    {
      "numero": 9,
      "texte_ar": "وَيَنقَلِبُ إِلَىٰٓ أَهْلِهِۦ مَسْرُورًۭا"
    },
    {
      "numero": 10,
      "texte_ar": "وَأَمَّا مَنْ أُوتِىَ كِتَٰبَهُۥ وَرَآءَ ظَهْرِهِۦ"
    },
    {
      "numero": 11,
      "texte_ar": "فَسَوْفَ يَدْعُوا۟ ثُبُورًۭا"
    },
    {
      "numero": 12,
      "texte_ar": "وَيَصْلَىٰ سَعِيرًا"
    },
    {
      "numero": 13,
      "texte_ar": "إِنَّهُۥ كَانَ فِىٓ أَهْلِهِۦ مَسْرُورًا"
    },
    {
      "numero": 14,
      "texte_ar": "إِنَّهُۥ ظَنَّ أَن لَّن يَحُورَ"
    },
    {
      "numero": 15,
      "texte_ar": "بَلَىٰٓ إِنَّ رَبَّهُۥ كَانَ بِهِۦ بَصِيرًۭا"
    },
    {
      "numero": 16,
      "texte_ar": "فَلَآ أُقْسِمُ بِٱلشَّفَقِ"
    },
    {
      "numero": 17,
      "texte_ar": "وَٱلَّيْلِ وَمَا وَسَقَ"
    },
    {
      "numero": 18,
      "texte_ar": "وَٱلْقَمَرِ إِذَا ٱتَّسَقَ"
    },
    {
      "numero": 19,
      "texte_ar": "لَتَرْكَبُنَّ طَبَقًا عَن طَبَقٍۢ"
    },
    {
      "numero": 20,
      "texte_ar": "فَمَا لَهُمْ لَا يُؤْمِنُونَ"
    },
    {
      "numero": 21,
      "texte_ar": "وَإِذَا قُرِئَ عَلَيْهِمُ ٱلْقُرْءَانُ لَا يَسْجُدُونَ ۩"
    },
    {
      "numero": 22,
      "texte_ar": "بَلِ ٱلَّذِينَ كَفَرُوا۟ يُكَذِّبُونَ"
    },
    {
      "numero": 23,
      "texte_ar": "وَٱللَّهُ أَعْلَمُ بِمَا يُوعُونَ"
    },
    {
      "numero": 24,
      "texte_ar": "فَبَشِّرْهُم بِعَذَابٍ أَلِيمٍ"
    },
    {
      "numero": 25,
      "texte_ar": "إِلَّا ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّٰلِحَٰتِ لَهُمْ أَجْرٌ غَيْرُ مَمْنُونٍۭ"
    }
  ]
}