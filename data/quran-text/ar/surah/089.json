{
  "id": 89,
  "nom": {
    "ar": "الفجر",
    "phonetique": "al-Fajr",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَٱلْفَجْرِ"
    },
    {
      "numero": 2,
      "texte_ar": "وَلَيَالٍ عَشْرٍۢ"
    },
    {
      "numero": 3,
      "texte_ar": "وَٱلشَّفْعِ وَٱلْوَتْرِ"
    },
    {
      "numero": 4,
      "texte_ar": "وَٱلَّيْلِ إِذَا يَسْرِ"
    },
    {
      "numero": 5,
      "texte_ar": "هَلْ فِى ذَٰلِكَ قَسَمٌۭ لِّذِى حِجْرٍ"
    },
    {
      "numero": 6,
      "texte_ar": "أَلَمْ تَرَ كَيْفَ فَعَلَ رَبُّكَ بِعَادٍ"
    },
    {
      "numero": 7,
      "texte_ar": "إِرَمَ ذَاتِ ٱلْعِمَادِ"
    },
    {
      "numero": 8,
      "texte_ar": "ٱلَّتِى لَمْ يُخْلَقْ مِثْلُهَا فِى ٱلْبِلَٰدِ"
    },
    {
      "numero": 9,
      "texte_ar": "وَثَمُودَ ٱلَّذِينَ جَابُوا۟ ٱلصَّخْرَ بِٱلْوَادِ"
    },
    {
      "numero": 10,
      "texte_ar": "وَفِرْعَوْنَ ذِى ٱلْأَوْتَادِ"
    },
    {
      "numero": 11,
      "texte_ar": "ٱلَّذِينَ طَغَوْا۟ فِى ٱلْبِلَٰدِ"
    },
    {
      "numero": 12,
      "texte_ar": "فَأَكْثَرُوا۟ فِيهَا ٱلْفَسَادَ"
    },
    {
      "numero": 13,
      "texte_ar": "فَصَبَّ عَلَيْهِمْ رَبُّكَ سَوْطَ عَذَابٍ"
    },
    {
      "numero": 14,
      "texte_ar": "إِنَّ رَبَّكَ لَبِٱلْمِرْصَادِ"
    },
    {
      "numero": 15,
      "texte_ar": "فَأَمَّا ٱلْإِنسَٰنُ إِذَا مَا ٱبْتَلَىٰهُ رَبُّهُۥ فَأَكْرَمَهُۥ وَنَعَّمَهُۥ فَيَقُولُ رَبِّىٓ أَكْرَمَنِ"
    },
    {
      "numero": 16,
      "texte_ar": "وَأَمَّآ إِذَا مَا ٱبْتَلَىٰهُ فَقَدَرَ عَلَيْهِ رِزْقَهُۥ فَيَقُولُ رَبِّىٓ أَهَٰنَنِ"
    },
    {
      "numero": 17,
      "texte_ar": "كَلَّا ۖ بَل لَّا تُكْرِمُونَ ٱلْيَتِيمَ"
    },
    {
      "numero": 18,
      "texte_ar": "وَلَا تَحَٰٓضُّونَ عَلَىٰ طَعَامِ ٱلْمِسْكِينِ"
    },
    {
      "numero": 19,
      "texte_ar": "وَتَأْكُلُونَ ٱلتُّرَاثَ أَكْلًۭا لَّمًّۭا"
    },
    {
      "numero": 20,
      "texte_ar": "وَتُحِبُّونَ ٱلْمَالَ حُبًّۭا جَمًّۭا"
    },
    {
      "numero": 21,
      "texte_ar": "كَلَّآ إِذَا دُكَّتِ ٱلْأَرْضُ دَكًّۭا دَكًّۭا"
    },
    {
      "numero": 22,
      "texte_ar": "وَجَآءَ رَبُّكَ وَٱلْمَلَكُ صَفًّۭا صَفًّۭا"
    },
    {
      "numero": 23,
      "texte_ar": "وَجِا۟ىٓءَ يَوْمَئِذٍۭ بِجَهَنَّمَ ۚ يَوْمَئِذٍۢ يَتَذَكَّرُ ٱلْإِنسَٰنُ وَأَنَّىٰ لَهُ ٱلذِّكْرَىٰ"
    },
    {
      "numero": 24,
      "texte_ar": "يَقُولُ يَٰلَيْتَنِى قَدَّمْتُ لِحَيَاتِى"
    },
    {
      "numero": 25,
      "texte_ar": "فَيَوْمَئِذٍۢ لَّا يُعَذِّبُ عَذَابَهُۥٓ أَحَدٌۭ"
    },
    {
      "numero": 26,
      "texte_ar": "وَلَا يُوثِقُ وَثَاقَهُۥٓ أَحَدٌۭ"
    },
    {
      "numero": 27,
      "texte_ar": "يَٰٓأَيَّتُهَا ٱلنَّفْسُ ٱلْمُطْمَئِنَّةُ"
    },
    {
      "numero": 28,
      "texte_ar": "ٱرْجِعِىٓ إِلَىٰ رَبِّكِ رَاضِيَةًۭ مَّرْضِيَّةًۭ"
    },
    {
      "numero": 29,
      "texte_ar": "فَٱدْخُلِى فِى عِبَٰدِى"
    },
    {
      "numero": 30,
      "texte_ar": "وَٱدْخُلِى جَنَّتِى"
    }
  ]
}