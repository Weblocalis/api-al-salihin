  "nom": {
    "ar": "عبس",
    "phonetique": "'Abasa",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "عَبَسَ وَتَوَلَّىٰٓ"
    },
    {
      "numero": 2,
      "texte_ar": "أَن جَآءَهُ ٱلْأَعْمَىٰ"
    },
    {
      "numero": 3,
      "texte_ar": "وَمَا يُدْرِيكَ لَعَلَّهُۥ يَزَّكَّىٰٓ"
    },
    {
      "numero": 4,
      "texte_ar": "أَوْ يَذَّكَّرُ فَتَنفَعَهُ ٱلذِّكْرَىٰٓ"
    },
    {
      "numero": 5,
      "texte_ar": "أَمَّا مَنِ ٱسْتَغْنَىٰ"
    },
    {
      "numero": 6,
      "texte_ar": "فَأَنتَ لَهُۥ تَصَدَّىٰ"
    },
    {
      "numero": 7,
      "texte_ar": "وَمَا عَلَيْكَ أَلَّا يَزَّكَّىٰ"
    },
    {
      "numero": 8,
      "texte_ar": "وَأَمَّا مَن جَآءَكَ يَسْعَىٰ"
    },
    {
      "numero": 9,
      "texte_ar": "وَهُوَ يَخْشَىٰ"
    },
    {
      "numero": 10,
      "texte_ar": "فَأَنتَ عَنْهُ تَلَهَّىٰ"
    },
    {
      "numero": 11,
      "texte_ar": "كَلَّآ إِنَّهَا تَذْكِرَةٌۭ"
    },
    {
      "numero": 12,
      "texte_ar": "فَمَن شَآءَ ذَكَرَهُۥ"
    },
    {
      "numero": 13,
      "texte_ar": "فِى صُحُفٍۢ مُّكَرَّمَةٍۢ"
    },
    {
      "numero": 14,
      "texte_ar": "مَّرْفُوعَةٍۢ مُّطَهَّرَةٍۭ"
    },
    {
      "numero": 15,
      "texte_ar": "بِأَيْدِى سَفَرَةٍۢ"
    },
    {
      "numero": 16,
      "texte_ar": "كِرَامٍۭ بَرَرَةٍۢ"
    },
    {
      "numero": 17,
      "texte_ar": "قُتِلَ ٱلْإِنسَٰنُ مَآ أَكْفَرَهُۥ"
    },
    {
      "numero": 18,
      "texte_ar": "مِنْ أَىِّ شَىْءٍ خَلَقَهُۥ"
    },
    {
      "numero": 19,
      "texte_ar": "مِن نُّطْفَةٍ خَلَقَهُۥ فَقَدَّرَهُۥ"
    },
    {
      "numero": 20,
      "texte_ar": "ثُمَّ ٱلسَّبِيلَ يَسَّرَهُۥ"
    },
    {
      "numero": 21,
      "texte_ar": "ثُمَّ أَمَاتَهُۥ فَأَقْبَرَهُۥ"
    },
    {
      "numero": 22,
      "texte_ar": "ثُمَّ إِذَا شَآءَ أَنشَرَهُۥ"
    },
    {
      "numero": 23,
      "texte_ar": "كَلَّا لَمَّا يَقْضِ مَآ أَمَرَهُۥ"
    },
    {
      "numero": 24,
      "texte_ar": "فَلْيَنظُرِ ٱلْإِنسَٰنُ إِلَىٰ طَعَامِهِۦٓ"
    },
    {
      "numero": 25,
      "texte_ar": "أَنَّا صَبَبْنَا ٱلْمَآءَ صَبًّۭا"
    },
    {
      "numero": 26,
      "texte_ar": "ثُمَّ شَقَقْنَا ٱلْأَرْضَ شَقًّۭا"
    },
    {
      "numero": 27,
      "texte_ar": "فَأَنۢبَتْنَا فِيهَا حَبًّۭا"
    },
    {
      "numero": 28,
      "texte_ar": "وَعِنَبًۭا وَقَضْبًۭا"
    },
    {
      "numero": 29,
      "texte_ar": "وَزَيْتُونًۭا وَنَخْلًۭا"
    },
    {
      "numero": 30,
      "texte_ar": "وَحَدَآئِقَ غُلْبًۭا"
    },
    {
      "numero": 31,
      "texte_ar": "وَفَٰكِهَةًۭ وَأَبًّۭا"
    },
    {
      "numero": 32,
      "texte_ar": "مَّتَٰعًۭا لَّكُمْ وَلِأَنْعَٰمِكُمْ"
    },
    {
      "numero": 33,
      "texte_ar": "فَإِذَا جَآءَتِ ٱلصَّآخَّةُ"
    },
    {
      "numero": 34,
      "texte_ar": "يَوْمَ يَفِرُّ ٱلْمَرْءُ مِنْ أَخِيهِ"
    },
    {
      "numero": 35,
      "texte_ar": "وَأُمِّهِۦ وَأَبِيهِ"
    },
    {
      "numero": 36,
      "texte_ar": "وَصَٰحِبَتِهِۦ وَبَنِيهِ"
    },
    {
      "numero": 37,
      "texte_ar": "لِكُلِّ ٱمْرِئٍۢ مِّنْهُمْ يَوْمَئِذٍۢ شَأْنٌۭ يُغْنِيهِ"
    },
    {
      "numero": 38,
      "texte_ar": "وُجُوهٌۭ يَوْمَئِذٍۢ مُّسْفِرَةٌۭ"
    },
    {
      "numero": 39,
      "texte_ar": "ضَاحِكَةٌۭ مُّسْتَبْشِرَةٌۭ"
    },
    {
      "numero": 40,
      "texte_ar": "وَوُجُوهٌۭ يَوْمَئِذٍ عَلَيْهَا غَبَرَةٌۭ"
    },
    {
      "numero": 41,
      "texte_ar": "تَرْهَقُهَا قَتَرَةٌ"
    },
    {
      "numero": 42,
      "texte_ar": "أُو۟لَٰٓئِكَ هُمُ ٱلْكَفَرَةُ ٱلْفَجَرَةُ"
    }
  ]
}