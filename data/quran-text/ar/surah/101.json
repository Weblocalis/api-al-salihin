  "id": 101,
  "nom": {
    "ar": "القارعة",
    "phonetique": "al-Qari'ah",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "ٱلْقَارِعَةُ"
    },
    {
      "numero": 2,
      "texte_ar": "مَا ٱلْقَارِعَةُ"
    },
    {
      "numero": 3,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا ٱلْقَارِعَةُ"
    },
    {
      "numero": 4,
      "texte_ar": "يَوْمَ يَكُونُ ٱلنَّاسُ كَٱلْفَرَاشِ ٱلْمَبْثُوثِ"
    },
    {
      "numero": 5,
      "texte_ar": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ ٱلْمَنفُوشِ"
    },
    {
      "numero": 6,
      "texte_ar": "فَأَمَّا مَن ثَقُلَتْ مَوَٰزِينُهُۥ"
    },
    {
      "numero": 7,
      "texte_ar": "فَهُوَ فِى عِيشَةٍۢ رَّاضِيَةٍۢ"
    },
    {
      "numero": 8,
      "texte_ar": "وَأَمَّا مَنْ خَفَّتْ مَوَٰزِينُهُۥ"
    },
    {
      "numero": 9,
      "texte_ar": "فَأُمُّهُۥ هَاوِيَةٌۭ"
    },
    {
      "numero": 10,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا هِيَهْ"
    },
    {
      "numero": 11,
      "texte_ar": "نَارٌ حَامِيَةٌۢ"
    }
  ]
}