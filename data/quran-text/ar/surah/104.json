{
  "id": 104,
  "nom": {
    "ar": "الهمزة",
    "phonetique": "al-Humazah",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَيْلٌۭ لِّكُلِّ هُمَزَةٍۢ لُّمَزَةٍ"
    },
    {
      "numero": 2,
      "texte_ar": "ٱلَّذِى جَمَعَ مَالًۭا وَعَدَّدَهُۥ"
    },
    {
      "numero": 3,
      "texte_ar": "يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ"
    },
    {
      "numero": 4,
      "texte_ar": "كَلَّا ۖ لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ"
    },
    {
      "numero": 5,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ"
    },
    {
      "numero": 6,
      "texte_ar": "نَارُ ٱللَّهِ ٱلْمُوقَدَةُ"
    },
    {
      "numero": 7,
      "texte_ar": "ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ"
    },
    {
      "numero": 8,
      "texte_ar": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌۭ"
    },
    {
      "numero": 9,
      "texte_ar": "فِى عَمَدٍۢ مُّمَدَّدَةٍۭ"
    }
  ]
}