{
  "id": 75,
  "nom": {
    "ar": "القيامة",
    "phonetique": "al-Qiyamah",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "لَآ أُقْسِمُ بِيَوْمِ ٱلْقِيَٰمَةِ"
    },
    {
      "numero": 2,
      "texte_ar": "وَلَآ أُقْسِمُ بِٱلنَّفْسِ ٱللَّوَّامَةِ"
    },
    {
      "numero": 3,
      "texte_ar": "أَيَحْسَبُ ٱلْإِنسَٰنُ أَلَّن نَّجْمَعَ عِظَامَهُۥ"
    },
    {
      "numero": 4,
      "texte_ar": "بَلَىٰ قَٰدِرِينَ عَلَىٰٓ أَن نُّسَوِّىَ بَنَانَهُۥ"
    },
    {
      "numero": 5,
      "texte_ar": "بَلْ يُرِيدُ ٱلْإِنسَٰنُ لِيَفْجُرَ أَمَامَهُۥ"
    },
    {
      "numero": 6,
      "texte_ar": "يَسْـَٔلُ أَيَّانَ يَوْمُ ٱلْقِيَٰمَةِ"
    },
    {
      "numero": 7,
      "texte_ar": "فَإِذَا بَرِقَ ٱلْبَصَرُ"
    },
    {
      "numero": 8,
      "texte_ar": "وَخَسَفَ ٱلْقَمَرُ"
    },
    {
      "numero": 9,
      "texte_ar": "وَجُمِعَ ٱلشَّمْسُ وَٱلْقَمَرُ"
    },
    {
      "numero": 10,
      "texte_ar": "يَقُولُ ٱلْإِنسَٰنُ يَوْمَئِذٍ أَيْنَ ٱلْمَفَرُّ"
    },
    {
      "numero": 11,
      "texte_ar": "كَلَّا لَا وَزَرَ"
    },
    {
      "numero": 12,
      "texte_ar": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ ٱلْمُسْتَقَرُّ"
    },
    {
      "numero": 13,
      "texte_ar": "يُنَبَّؤُا۟ ٱلْإِنسَٰنُ يَوْمَئِذٍۭ بِمَا قَدَّمَ وَأَخَّرَ"
    },
    {
      "numero": 14,
      "texte_ar": "بَلِ ٱلْإِنسَٰنُ عَلَىٰ نَفْسِهِۦ بَصِيرَةٌۭ"
    },
    {
      "numero": 15,
      "texte_ar": "وَلَوْ أَلْقَىٰ مَعَاذِيرَهُۥ"
    },
    {
      "numero": 16,
      "texte_ar": "لَا تُحَرِّكْ بِهِۦ لِسَانَكَ لِتَعْجَلَ بِهِۦٓ"
    },
    {
      "numero": 17,
      "texte_ar": "إِنَّ عَلَيْنَا جَمْعَهُۥ وَقُرْءَانَهُۥ"
    },
    {
      "numero": 18,
      "texte_ar": "فَإِذَا قَرَأْنَٰهُ فَٱتَّبِعْ قُرْءَانَهُۥ"
    },
    {
      "numero": 19,
      "texte_ar": "ثُمَّ إِنَّ عَلَيْنَا بَيَانَهُۥ"
    },
    {
      "numero": 20,
      "texte_ar": "كَلَّا بَلْ تُحِبُّونَ ٱلْعَاجِلَةَ"
    },
    {
      "numero": 21,
      "texte_ar": "وَتَذَرُونَ ٱلْءَاخِرَةَ"
    },
    {
      "numero": 22,
      "texte_ar": "وُجُوهٌۭ يَوْمَئِذٍۢ نَّاضِرَةٌ"
    },
    {
      "numero": 23,
      "texte_ar": "إِلَىٰ رَبِّهَا نَاظِرَةٌۭ"
    },
    {
      "numero": 24,
      "texte_ar": "وَوُجُوهٌۭ يَوْمَئِذٍۭ بَاسِرَةٌۭ"
    },
    {
      "numero": 25,
      "texte_ar": "تَظُنُّ أَن يُفْعَلَ بِهَا فَاقِرَةٌۭ"
    },
    {
      "numero": 26,
      "texte_ar": "كَلَّآ إِذَا بَلَغَتِ ٱلتَّرَاقِىَ"
    },
    {
      "numero": 27,
      "texte_ar": "وَقِيلَ مَنْ ۜ رَاقٍۢ"
    },
    {
      "numero": 28,
      "texte_ar": "وَظَنَّ أَنَّهُ ٱلْفِرَاقُ"
    },
    {
      "numero": 29,
      "texte_ar": "وَٱلْتَفَّتِ ٱلسَّاقُ بِٱلسَّاقِ"
    },
    {
      "numero": 30,
      "texte_ar": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ ٱلْمَسَاقُ"
    },
    {
      "numero": 31,
      "texte_ar": "فَلَا صَدَّقَ وَلَا صَلَّىٰ"
    },
    {
      "numero": 32,
      "texte_ar": "وَلَٰكِن كَذَّبَ وَتَوَلَّىٰ"
    },
    {
      "numero": 33,
      "texte_ar": "ثُمَّ ذَهَبَ إِلَىٰٓ أَهْلِهِۦ يَتَمَطَّىٰٓ"
    },
    {
      "numero": 34,
      "texte_ar": "أَوْلَىٰ لَكَ فَأَوْلَىٰ"
    },
    {
      "numero": 35,
      "texte_ar": "ثُمَّ أَوْلَىٰ لَكَ فَأَوْلَىٰٓ"
    },
    {
      "numero": 36,
      "texte_ar": "أَيَحْسَبُ ٱلْإِنسَٰنُ أَن يُتْرَكَ سُدًى"
    },
    {
      "numero": 37,
      "texte_ar": "أَلَمْ يَكُ نُطْفَةًۭ مِّن مَّنِىٍّۢ يُمْنَىٰ"
    },
    {
      "numero": 38,
      "texte_ar": "ثُمَّ كَانَ عَلَقَةًۭ فَخَلَقَ فَسَوَّىٰ"
    },
    {
      "numero": 39,
      "texte_ar": "فَجَعَلَ مِنْهُ ٱلزَّوْجَيْنِ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ"
    },
    {
      "numero": 40,
      "texte_ar": "أَلَيْسَ ذَٰلِكَ بِقَٰدِرٍ عَلَىٰٓ أَن يُحْۦِىَ ٱلْمَوْتَىٰ"
    }
  ]
}