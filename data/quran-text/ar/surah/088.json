{
  "id": 88,
  "nom": {
    "ar": "الغاشية",
    "phonetique": "Al-Ghashiyah",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "هَلْ أَتَىٰكَ حَدِيثُ ٱلْغَٰشِيَةِ"
    },
    {
      "numero": 2,
      "texte_ar": "وُجُوهٌۭ يَوْمَئِذٍ خَٰشِعَةٌ"
    },
    {
      "numero": 3,
      "texte_ar": "عَامِلَةٌۭ نَّاصِبَةٌۭ"
    },
    {
      "numero": 4,
      "texte_ar": "تَصْلَىٰ نَارًا حَامِيَةًۭ"
    },
    {
      "numero": 5,
      "texte_ar": "تُسْقَىٰ مِنْ عَيْنٍ ءَانِيَةٍۢ"
    },
    {
      "numero": 6,
      "texte_ar": "لَّيْسَ لَهُمْ طَعَامٌ إِلَّا مِن ضَرِيعٍۢ"
    },
    {
      "numero": 7,
      "texte_ar": "لَّا يُسْمِنُ وَلَا يُغْنِى مِن جُوعٍۢ"
    },
    {
      "numero": 8,
      "texte_ar": "وُجُوهٌۭ يَوْمَئِذٍۢ نَّاعِمَةٌۭ"
    },
    {
      "numero": 9,
      "texte_ar": "لِّسَعْيِهَا رَاضِيَةٌۭ"
    },
    {
      "numero": 10,
      "texte_ar": "فِى جَنَّةٍ عَالِيَةٍۢ"
    },
    {
      "numero": 11,
      "texte_ar": "لَّا تَسْمَعُ فِيهَا لَٰغِيَةًۭ"
    },
    {
      "numero": 12,
      "texte_ar": "فِيهَا عَيْنٌۭ جَارِيَةٌۭ"
    },
    {
      "numero": 13,
      "texte_ar": "فِيهَا سُرُرٌۭ مَّرْفُوعَةٌۭ"
    },
    {
      "numero": 14,
      "texte_ar": "وَأَكْوَابٌۭ مَّوْضُوعَةٌۭ"
    },
    {
      "numero": 15,
      "texte_ar": "وَنَمَارِقُ مَصْفُوفَةٌۭ"
    },
    {
      "numero": 16,
      "texte_ar": "وَزَرَابِىُّ مَبْثُوثَةٌ"
    },
    {
      "numero": 17,
      "texte_ar": "أَفَلَا يَنظُرُونَ إِلَى ٱلْإِبِلِ كَيْفَ خُلِقَتْ"
    },
    {
      "numero": 18,
      "texte_ar": "وَإِلَى ٱلسَّمَآءِ كَيْفَ رُفِعَتْ"
    },
    {
      "numero": 19,
      "texte_ar": "وَإِلَى ٱلْجِبَالِ كَيْفَ نُصِبَتْ"
    },
    {
      "numero": 20,
      "texte_ar": "وَإِلَى ٱلْأَرْضِ كَيْفَ سُطِحَتْ"
    },
    {
      "numero": 21,
      "texte_ar": "فَذَكِّرْ إِنَّمَآ أَنتَ مُذَكِّرٌۭ"
    },
    {
      "numero": 22,
      "texte_ar": "لَّسْتَ عَلَيْهِم بِمُصَيْطِرٍ"
    },
    {
      "numero": 23,
      "texte_ar": "إِلَّا مَن تَوَلَّىٰ وَكَفَرَ"
    },
    {
      "numero": 24,
      "texte_ar": "فَيُعَذِّبُهُ ٱللَّهُ ٱلْعَذَابَ ٱلْأَكْبَرَ"
    },
    {
      "numero": 25,
      "texte_ar": "إِنَّ إِلَيْنَآ إِيَابَهُمْ"
    },
    {
      "numero": 26,
      "texte_ar": "ثُمَّ إِنَّ عَلَيْنَا حِسَابَهُم"
    }
  ]
}