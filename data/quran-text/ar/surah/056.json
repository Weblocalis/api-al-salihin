{
  "id": 56,
  "nom": {
    "ar": "الواقعة",
    "phonetique": "al-Waqi'ah",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "إِذَا وَقَعَتِ ٱلْوَاقِعَةُ"
    },
    {
      "numero": 2,
      "texte_ar": "لَيْسَ لِوَقْعَتِهَا كَاذِبَةٌ"
    },
    {
      "numero": 3,
      "texte_ar": "خَافِضَةٌۭ رَّافِعَةٌ"
    },
    {
      "numero": 4,
      "texte_ar": "إِذَا رُجَّتِ ٱلْأَرْضُ رَجًّۭا"
    },
    {
      "numero": 5,
      "texte_ar": "وَبُسَّتِ ٱلْجِبَالُ بَسًّۭا"
    },
    {
      "numero": 6,
      "texte_ar": "فَكَانَتْ هَبَآءًۭ مُّنۢبَثًّۭا"
    },
    {
      "numero": 7,
      "texte_ar": "وَكُنتُمْ أَزْوَٰجًۭا ثَلَٰثَةًۭ"
    },
    {
      "numero": 8,
      "texte_ar": "فَأَصْحَٰبُ ٱلْمَيْمَنَةِ مَآ أَصْحَٰبُ ٱلْمَيْمَنَةِ"
    },
    {
      "numero": 9,
      "texte_ar": "وَأَصْحَٰبُ ٱلْمَشْـَٔمَةِ مَآ أَصْحَٰبُ ٱلْمَشْـَٔمَةِ"
    },
    {
      "numero": 10,
      "texte_ar": "وَٱلسَّٰبِقُونَ ٱلسَّٰبِقُونَ"
    },
    {
      "numero": 11,
      "texte_ar": "أُو۟لَٰٓئِكَ ٱلْمُقَرَّبُونَ"
    },
    {
      "numero": 12,
      "texte_ar": "فِى جَنَّٰتِ ٱلنَّعِيمِ"
    },
    {
      "numero": 13,
      "texte_ar": "ثُلَّةٌۭ مِّنَ ٱلْأَوَّلِينَ"
    },
    {
      "numero": 14,
      "texte_ar": "وَقَلِيلٌۭ مِّنَ ٱلْءَاخِرِينَ"
    },
    {
      "numero": 15,
      "texte_ar": "عَلَىٰ سُرُرٍۢ مَّوْضُونَةٍۢ"
    },
    {
      "numero": 16,
      "texte_ar": "مُّتَّكِـِٔينَ عَلَيْهَا مُتَقَٰبِلِينَ"
    },
    {
      "numero": 17,
      "texte_ar": "يَطُوفُ عَلَيْهِمْ وِلْدَٰنٌۭ مُّخَلَّدُونَ"
    },
    {
      "numero": 18,
      "texte_ar": "بِأَكْوَابٍۢ وَأَبَارِيقَ وَكَأْسٍۢ مِّن مَّعِينٍۢ"
    },
    {
      "numero": 19,
      "texte_ar": "لَّا يُصَدَّعُونَ عَنْهَا وَلَا يُنزِفُونَ"
    },
    {
      "numero": 20,
      "texte_ar": "وَفَٰكِهَةٍۢ مِّمَّا يَتَخَيَّرُونَ"
    },
    {
      "numero": 21,
      "texte_ar": "وَلَحْمِ طَيْرٍۢ مِّمَّا يَشْتَهُونَ"
    },
    {
      "numero": 22,
      "texte_ar": "وَحُورٌ عِينٌۭ"
    },
    {
      "numero": 23,
      "texte_ar": "كَأَمْثَٰلِ ٱللُّؤْلُؤِ ٱلْمَكْنُونِ"
    },
    {
      "numero": 24,
      "texte_ar": "جَزَآءًۢ بِمَا كَانُوا۟ يَعْمَلُونَ"
    },
    {
      "numero": 25,
      "texte_ar": "لَا يَسْمَعُونَ فِيهَا لَغْوًۭا وَلَا تَأْثِيمًا"
    },
    {
      "numero": 26,
      "texte_ar": "إِلَّا قِيلًۭا سَلَٰمًۭا سَلَٰمًۭا"
    },
    {
      "numero": 27,
      "texte_ar": "وَأَصْحَٰبُ ٱلْيَمِينِ مَآ أَصْحَٰبُ ٱلْيَمِينِ"
    },
    {
      "numero": 28,
      "texte_ar": "فِى سِدْرٍۢ مَّخْضُودٍۢ"
    },
    {
      "numero": 29,
      "texte_ar": "وَطَلْحٍۢ مَّنضُودٍۢ"
    },
    {
      "numero": 30,
      "texte_ar": "وَظِلٍّۢ مَّمْدُودٍۢ"
    },
    {
      "numero": 31,
      "texte_ar": "وَمَآءٍۢ مَّسْكُوبٍۢ"
    },
    {
      "numero": 32,
      "texte_ar": "وَفَٰكِهَةٍۢ كَثِيرَةٍۢ"
    },
    {
      "numero": 33,
      "texte_ar": "لَّا مَقْطُوعَةٍۢ وَلَا مَمْنُوعَةٍۢ"
    },
    {
      "numero": 34,
      "texte_ar": "وَفُرُشٍۢ مَّرْفُوعَةٍ"
    },
    {
      "numero": 35,
      "texte_ar": "إِنَّآ أَنشَأْنَٰهُنَّ إِنشَآءًۭ"
    },
    {
      "numero": 36,
      "texte_ar": "فَجَعَلْنَٰهُنَّ أَبْكَارًا"
    },
    {
      "numero": 37,
      "texte_ar": "عُرُبًا أَتْرَابًۭا"
    },
    {
      "numero": 38,
      "texte_ar": "لِّأَصْحَٰبِ ٱلْيَمِينِ"
    },
    {
      "numero": 39,
      "texte_ar": "ثُلَّةٌۭ مِّنَ ٱلْأَوَّلِينَ"
    },
    {
      "numero": 40,
      "texte_ar": "وَثُلَّةٌۭ مِّنَ ٱلْءَاخِرِينَ"
    },
    {
      "numero": 41,
      "texte_ar": "وَأَصْحَٰبُ ٱلشِّمَالِ مَآ أَصْحَٰبُ ٱلشِّمَالِ"
    },
    {
      "numero": 42,
      "texte_ar": "فِى سَمُومٍۢ وَحَمِيمٍۢ"
    },
    {
      "numero": 43,
      "texte_ar": "وَظِلٍّۢ مِّن يَحْمُومٍۢ"
    },
    {
      "numero": 44,
      "texte_ar": "لَّا بَارِدٍۢ وَلَا كَرِيمٍ"
    },
    {
      "numero": 45,
      "texte_ar": "إِنَّهُمْ كَانُوا۟ قَبْلَ ذَٰلِكَ مُتْرَفِينَ"
    },
    {
      "numero": 46,
      "texte_ar": "وَكَانُوا۟ يُصِرُّونَ عَلَى ٱلْحِنثِ ٱلْعَظِيمِ"
    },
    {
      "numero": 47,
      "texte_ar": "وَكَانُوا۟ يَقُولُونَ أَئِذَا مِتْنَا وَكُنَّا تُرَابًۭا وَعِظَٰمًا أَءِنَّا لَمَبْعُوثُونَ"
    },
    {
      "numero": 48,
      "texte_ar": "أَوَءَابَآؤُنَا ٱلْأَوَّلُونَ"
    },
    {
      "numero": 49,
      "texte_ar": "قُلْ إِنَّ ٱلْأَوَّلِينَ وَٱلْءَاخِرِينَ"
    },
    {
      "numero": 50,
      "texte_ar": "لَمَجْمُوعُونَ إِلَىٰ مِيقَٰتِ يَوْمٍۢ مَّعْلُومٍۢ"
    },
    {
      "numero": 51,
      "texte_ar": "ثُمَّ إِنَّكُمْ أَيُّهَا ٱلضَّآلُّونَ ٱلْمُكَذِّبُونَ"
    },
    {
      "numero": 52,
      "texte_ar": "لَءَاكِلُونَ مِن شَجَرٍۢ مِّن زَقُّومٍۢ"
    },
    {
      "numero": 53,
      "texte_ar": "فَمَالِـُٔونَ مِنْهَا ٱلْبُطُونَ"
    },
    {
      "numero": 54,
      "texte_ar": "فَشَٰرِبُونَ عَلَيْهِ مِنَ ٱلْحَمِيمِ"
    },
    {
      "numero": 55,
      "texte_ar": "فَشَٰرِبُونَ شُرْبَ ٱلْهِيمِ"
    },
    {
      "numero": 56,
      "texte_ar": "هَٰذَا نُزُلُهُمْ يَوْمَ ٱلدِّينِ"
    },
    {
      "numero": 57,
      "texte_ar": "نَحْنُ خَلَقْنَٰكُمْ فَلَوْلَا تُصَدِّقُونَ"
    },
    {
      "numero": 58,
      "texte_ar": "أَفَرَءَيْتُم مَّا تُمْنُونَ"
    },
    {
      "numero": 59,
      "texte_ar": "ءَأَنتُمْ تَخْلُقُونَهُۥٓ أَمْ نَحْنُ ٱلْخَٰلِقُونَ"
    },
    {
      "numero": 60,
      "texte_ar": "نَحْنُ قَدَّرْنَا بَيْنَكُمُ ٱلْمَوْتَ وَمَا نَحْنُ بِمَسْبُوقِينَ"
    },
    {
      "numero": 61,
      "texte_ar": "عَلَىٰٓ أَن نُّبَدِّلَ أَمْثَٰلَكُمْ وَنُنشِئَكُمْ فِى مَا لَا تَعْلَمُونَ"
    },
    {
      "numero": 62,
      "texte_ar": "وَلَقَدْ عَلِمْتُمُ ٱلنَّشْأَةَ ٱلْأُولَىٰ فَلَوْلَا تَذَكَّرُونَ"
    },
    {
      "numero": 63,
      "texte_ar": "أَفَرَءَيْتُم مَّا تَحْرُثُونَ"
    },
    {
      "numero": 64,
      "texte_ar": "ءَأَنتُمْ تَزْرَعُونَهُۥٓ أَمْ نَحْنُ ٱلزَّٰرِعُونَ"
    },
    {
      "numero": 65,
      "texte_ar": "لَوْ نَشَآءُ لَجَعَلْنَٰهُ حُطَٰمًۭا فَظَلْتُمْ تَفَكَّهُونَ"
    },
    {
      "numero": 66,
      "texte_ar": "إِنَّا لَمُغْرَمُونَ"
    },
    {
      "numero": 67,
      "texte_ar": "بَلْ نَحْنُ مَحْرُومُونَ"
    },
    {
      "numero": 68,
      "texte_ar": "أَفَرَءَيْتُمُ ٱلْمَآءَ ٱلَّذِى تَشْرَبُونَ"
    },
    {
      "numero": 69,
      "texte_ar": "ءَأَنتُمْ أَنزَلْتُمُوهُ مِنَ ٱلْمُزْنِ أَمْ نَحْنُ ٱلْمُنزِلُونَ"
    },
    {
      "numero": 70,
      "texte_ar": "لَوْ نَشَآءُ جَعَلْنَٰهُ أُجَاجًۭا فَلَوْلَا تَشْكُرُونَ"
    },
    {
      "numero": 71,
      "texte_ar": "أَفَرَءَيْتُمُ ٱلنَّارَ ٱلَّتِى تُورُونَ"
    },
    {
      "numero": 72,
      "texte_ar": "ءَأَنتُمْ أَنشَأْتُمْ شَجَرَتَهَآ أَمْ نَحْنُ ٱلْمُنشِـُٔونَ"
    },
    {
      "numero": 73,
      "texte_ar": "نَحْنُ جَعَلْنَٰهَا تَذْكِرَةًۭ وَمَتَٰعًۭا لِّلْمُقْوِينَ"
    },
    {
      "numero": 74,
      "texte_ar": "فَسَبِّحْ بِٱسْمِ رَبِّكَ ٱلْعَظِيمِ"
    },
    {
      "numero": 75,
      "texte_ar": "۞ فَلَآ أُقْسِمُ بِمَوَٰقِعِ ٱلنُّجُومِ"
    },
    {
      "numero": 76,
      "texte_ar": "وَإِنَّهُۥ لَقَسَمٌۭ لَّوْ تَعْلَمُونَ عَظِيمٌ"
    },
    {
      "numero": 77,
      "texte_ar": "إِنَّهُۥ لَقُرْءَانٌۭ كَرِيمٌۭ"
    },
    {
      "numero": 78,
      "texte_ar": "فِى كِتَٰبٍۢ مَّكْنُونٍۢ"
    },
    {
      "numero": 79,
      "texte_ar": "لَّا يَمَسُّهُۥٓ إِلَّا ٱلْمُطَهَّرُونَ"
    },
    {
      "numero": 80,
      "texte_ar": "تَنزِيلٌۭ مِّن رَّبِّ ٱلْعَٰلَمِينَ"
    },
    {
      "numero": 81,
      "texte_ar": "أَفَبِهَٰذَا ٱلْحَدِيثِ أَنتُم مُّدْهِنُونَ"
    },
    {
      "numero": 82,
      "texte_ar": "وَتَجْعَلُونَ رِزْقَكُمْ أَنَّكُمْ تُكَذِّبُونَ"
    },
    {
      "numero": 83,
      "texte_ar": "فَلَوْلَآ إِذَا بَلَغَتِ ٱلْحُلْقُومَ"
    },
    {
      "numero": 84,
      "texte_ar": "وَأَنتُمْ حِينَئِذٍۢ تَنظُرُونَ"
    },
    {
      "numero": 85,
      "texte_ar": "وَنَحْنُ أَقْرَبُ إِلَيْهِ مِنكُمْ وَلَٰكِن لَّا تُبْصِرُونَ"
    },
    {
      "numero": 86,
      "texte_ar": "فَلَوْلَآ إِن كُنتُمْ غَيْرَ مَدِينِينَ"
    },
    {
      "numero": 87,
      "texte_ar": "تَرْجِعُونَهَآ إِن كُنتُمْ صَٰدِقِينَ"
    },
    {
      "numero": 88,
      "texte_ar": "فَأَمَّآ إِن كَانَ مِنَ ٱلْمُقَرَّبِينَ"
    },
    {
      "numero": 89,
      "texte_ar": "فَرَوْحٌۭ وَرَيْحَانٌۭ وَجَنَّتُ نَعِيمٍۢ"
    },
    {
      "numero": 90,
      "texte_ar": "وَأَمَّآ إِن كَانَ مِنْ أَصْحَٰبِ ٱلْيَمِينِ"
    },
    {
      "numero": 91,
      "texte_ar": "فَسَلَٰمٌۭ لَّكَ مِنْ أَصْحَٰبِ ٱلْيَمِينِ"
    },
    {
      "numero": 92,
      "texte_ar": "وَأَمَّآ إِن كَانَ مِنَ ٱلْمُكَذِّبِينَ ٱلضَّآلِّينَ"
    },
    {
      "numero": 93,
      "texte_ar": "فَنُزُلٌۭ مِّنْ حَمِيمٍۢ"
    },
    {
      "numero": 94,
      "texte_ar": "وَتَصْلِيَةُ جَحِيمٍ"
    },
    {
      "numero": 95,
      "texte_ar": "إِنَّ هَٰذَا لَهُوَ حَقُّ ٱلْيَقِينِ"
    },
    {
      "numero": 96,
      "texte_ar": "فَسَبِّحْ بِٱسْمِ رَبِّكَ ٱلْعَظِيمِ"
    }
  ]
}