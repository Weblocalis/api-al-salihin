{
  "id": 94,
  "nom": {
    "ar": "الشرح",
    "phonetique": "Ash-Sharh",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "أَلَمْ نَشْرَحْ لَكَ صَدْرَكَ"
    },
    {
      "numero": 2,
      "texte_ar": "وَوَضَعْنَا عَنكَ وِزْرَكَ"
    },
    {
      "numero": 3,
      "texte_ar": "ٱلَّذِىٓ أَنقَضَ ظَهْرَكَ"
    },
    {
      "numero": 4,
      "texte_ar": "وَرَفَعْنَا لَكَ ذِكْرَكَ"
    },
    {
      "numero": 5,
      "texte_ar": "فَإِنَّ مَعَ ٱلْعُسْرِ يُسْرًا"
    },
    {
      "numero": 6,
      "texte_ar": "إِنَّ مَعَ ٱلْعُسْرِ يُسْرًۭا"
    },
    {
      "numero": 7,
      "texte_ar": "فَإِذَا فَرَغْتَ فَٱنصَبْ"
    },
    {
      "numero": 8,
      "texte_ar": "وَإِلَىٰ رَبِّكَ فَٱرْغَب"
    }
  ]
}