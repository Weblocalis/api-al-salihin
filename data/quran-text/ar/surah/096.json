{
  "id": 96,
  "nom": {
    "ar": "العلق",
    "phonetique": "al-'Alaq",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "ٱقْرَأْ بِٱسْمِ رَبِّكَ ٱلَّذِى خَلَقَ"
    },
    {
      "numero": 2,
      "texte_ar": "خَلَقَ ٱلْإِنسَٰنَ مِنْ عَلَقٍ"
    },
    {
      "numero": 3,
      "texte_ar": "ٱقْرَأْ وَرَبُّكَ ٱلْأَكْرَمُ"
    },
    {
      "numero": 4,
      "texte_ar": "ٱلَّذِى عَلَّمَ بِٱلْقَلَمِ"
    },
    {
      "numero": 5,
      "texte_ar": "عَلَّمَ ٱلْإِنسَٰنَ مَا لَمْ يَعْلَمْ"
    },
    {
      "numero": 6,
      "texte_ar": "كَلَّآ إِنَّ ٱلْإِنسَٰنَ لَيَطْغَىٰٓ"
    },
    {
      "numero": 7,
      "texte_ar": "أَن رَّءَاهُ ٱسْتَغْنَىٰٓ"
    },
    {
      "numero": 8,
      "texte_ar": "إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجْعَىٰٓ"
    },
    {
      "numero": 9,
      "texte_ar": "أَرَءَيْتَ ٱلَّذِى يَنْهَىٰ"
    },
    {
      "numero": 10,
      "texte_ar": "عَبْدًا إِذَا صَلَّىٰٓ"
    },
    {
      "numero": 11,
      "texte_ar": "أَرَءَيْتَ إِن كَانَ عَلَى ٱلْهُدَىٰٓ"
    },
    {
      "numero": 12,
      "texte_ar": "أَوْ أَمَرَ بِٱلتَّقْوَىٰٓ"
    },
    {
      "numero": 13,
      "texte_ar": "أَرَءَيْتَ إِن كَذَّبَ وَتَوَلَّىٰٓ"
    },
    {
      "numero": 14,
      "texte_ar": "أَلَمْ يَعْلَم بِأَنَّ ٱللَّهَ يَرَىٰ"
    },
    {
      "numero": 15,
      "texte_ar": "كَلَّا لَئِن لَّمْ يَنتَهِ لَنَسْفَعًۢا بِٱلنَّاصِيَةِ"
    },
    {
      "numero": 16,
      "texte_ar": "نَاصِيَةٍۢ كَٰذِبَةٍ خَاطِئَةٍۢ"
    },
    {
      "numero": 17,
      "texte_ar": "فَلْيَدْعُ نَادِيَهُۥ"
    },
    {
      "numero": 18,
      "texte_ar": "سَنَدْعُ ٱلزَّبَانِيَةَ"
    },
    {
      "numero": 19,
      "texte_ar": "كَلَّا لَا تُطِعْهُ وَٱسْجُدْ وَٱقْتَرِب ۩"
    }
  ]
}