{
  "id": 93,
  "nom": {
    "ar": "الضحى",
    "phonetique": "ad-Dhuha",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَٱلضُّحَىٰ"
    },
    {
      "numero": 2,
      "texte_ar": "وَٱلَّيْلِ إِذَا سَجَىٰ"
    },
    {
      "numero": 3,
      "texte_ar": "مَا وَدَّعَكَ رَبُّكَ وَمَا قَلَىٰ"
    },
    {
      "numero": 4,
      "texte_ar": "وَلَلْءَاخِرَةُ خَيْرٌۭ لَّكَ مِنَ ٱلْأُولَىٰ"
    },
    {
      "numero": 5,
      "texte_ar": "وَلَسَوْفَ يُعْطِيكَ رَبُّكَ فَتَرْضَىٰٓ"
    },
    {
      "numero": 6,
      "texte_ar": "أَلَمْ يَجِدْكَ يَتِيمًۭا فَـَٔاوَىٰ"
    },
    {
      "numero": 7,
      "texte_ar": "وَوَجَدَكَ ضَآلًّۭا فَهَدَىٰ"
    },
    {
      "numero": 8,
      "texte_ar": "وَوَجَدَكَ عَآئِلًۭا فَأَغْنَىٰ"
    },
    {
      "numero": 9,
      "texte_ar": "فَأَمَّا ٱلْيَتِيمَ فَلَا تَقْهَرْ"
    },
    {
      "numero": 10,
      "texte_ar": "وَأَمَّا ٱلسَّآئِلَ فَلَا تَنْهَرْ"
    },
    {
      "numero": 11,
      "texte_ar": "وَأَمَّا بِنِعْمَةِ رَبِّكَ فَحَدِّثْ"
    }
  ]
}