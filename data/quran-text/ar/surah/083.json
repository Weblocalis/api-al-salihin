{
  "id": 83,
  "nom": {
    "ar": "المطففين",
    "phonetique": "Al-Mutaffifin",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَيْلٌۭ لِّلْمُطَفِّفِينَ"
    },
    {
      "numero": 2,
      "texte_ar": "ٱلَّذِينَ إِذَا ٱكْتَالُوا۟ عَلَى ٱلنَّاسِ يَسْتَوْفُونَ"
    },
    {
      "numero": 3,
      "texte_ar": "وَإِذَا كَالُوهُمْ أَو وَّزَنُوهُمْ يُخْسِرُونَ"
    },
    {
      "numero": 4,
      "texte_ar": "أَلَا يَظُنُّ أُو۟لَٰٓئِكَ أَنَّهُم مَّبْعُوثُونَ"
    },
    {
      "numero": 5,
      "texte_ar": "لِيَوْمٍ عَظِيمٍۢ"
    },
    {
      "numero": 6,
      "texte_ar": "يَوْمَ يَقُومُ ٱلنَّاسُ لِرَبِّ ٱلْعَٰلَمِينَ"
    },
    {
      "numero": 7,
      "texte_ar": "كَلَّآ إِنَّ كِتَٰبَ ٱلْفُجَّارِ لَفِى سِجِّينٍۢ"
    },
    {
      "numero": 8,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا سِجِّينٌۭ"
    },
    {
      "numero": 9,
      "texte_ar": "كِتَٰبٌۭ مَّرْقُومٌۭ"
    },
    {
      "numero": 10,
      "texte_ar": "وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ"
    },
    {
      "numero": 11,
      "texte_ar": "ٱلَّذِينَ يُكَذِّبُونَ بِيَوْمِ ٱلدِّينِ"
    },
    {
      "numero": 12,
      "texte_ar": "وَمَا يُكَذِّبُ بِهِۦٓ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ"
    },
    {
      "numero": 13,
      "texte_ar": "إِذَا تُتْلَىٰ عَلَيْهِ ءَايَٰتُنَا قَالَ أَسَٰطِيرُ ٱلْأَوَّلِينَ"
    },
    {
      "numero": 14,
      "texte_ar": "كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ يَكْسِبُونَ"
    },
    {
      "numero": 15,
      "texte_ar": "كَلَّآ إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٍۢ لَّمَحْجُوبُونَ"
    },
    {
      "numero": 16,
      "texte_ar": "ثُمَّ إِنَّهُمْ لَصَالُوا۟ ٱلْجَحِيمِ"
    },
    {
      "numero": 17,
      "texte_ar": "ثُمَّ يُقَالُ هَٰذَا ٱلَّذِى كُنتُم بِهِۦ تُكَذِّبُونَ"
    },
    {
      "numero": 18,
      "texte_ar": "كَلَّآ إِنَّ كِتَٰبَ ٱلْأَبْرَارِ لَفِى عِلِّيِّينَ"
    },
    {
      "numero": 19,
      "texte_ar": "وَمَآ أَدْرَىٰكَ مَا عِلِّيُّونَ"
    },
    {
      "numero": 20,
      "texte_ar": "كِتَٰبٌۭ مَّرْقُومٌۭ"
    },
    {
      "numero": 21,
      "texte_ar": "يَشْهَدُهُ ٱلْمُقَرَّبُونَ"
    },
    {
      "numero": 22,
      "texte_ar": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ"
    },
    {
      "numero": 23,
      "texte_ar": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ"
    },
    {
      "numero": 24,
      "texte_ar": "تَعْرِفُ فِى وُجُوهِهِمْ نَضْرَةَ ٱلنَّعِيمِ"
    },
    {
      "numero": 25,
      "texte_ar": "يُسْقَوْنَ مِن رَّحِيقٍۢ مَّخْتُومٍ"
    },
    {
      "numero": 26,
      "texte_ar": "خِتَٰمُهُۥ مِسْكٌۭ ۚ وَفِى ذَٰلِكَ فَلْيَتَنَافَسِ ٱلْمُتَنَٰفِسُونَ"
    },
    {
      "numero": 27,
      "texte_ar": "وَمِزَاجُهُۥ مِن تَسْنِيمٍ"
    },
    {
      "numero": 28,
      "texte_ar": "عَيْنًۭا يَشْرَبُ بِهَا ٱلْمُقَرَّبُونَ"
    },
    {
      "numero": 29,
      "texte_ar": "إِنَّ ٱلَّذِينَ أَجْرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِينَ ءَامَنُوا۟ يَضْحَكُونَ"
    },
    {
      "numero": 30,
      "texte_ar": "وَإِذَا مَرُّوا۟ بِهِمْ يَتَغَامَزُونَ"
    },
    {
      "numero": 31,
      "texte_ar": "وَإِذَا ٱنقَلَبُوٓا۟ إِلَىٰٓ أَهْلِهِمُ ٱنقَلَبُوا۟ فَكِهِينَ"
    },
    {
      "numero": 32,
      "texte_ar": "وَإِذَا رَأَوْهُمْ قَالُوٓا۟ إِنَّ هَٰٓؤُلَآءِ لَضَآلُّونَ"
    },
    {
      "numero": 33,
      "texte_ar": "وَمَآ أُرْسِلُوا۟ عَلَيْهِمْ حَٰفِظِينَ"
    },
    {
      "numero": 34,
      "texte_ar": "فَٱلْيَوْمَ ٱلَّذِينَ ءَامَنُوا۟ مِنَ ٱلْكُفَّارِ يَضْحَكُونَ"
    },
    {
      "numero": 35,
      "texte_ar": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ"
    },
    {
      "numero": 36,
      "texte_ar": "هَلْ ثُوِّبَ ٱلْكُفَّارُ مَا كَانُوا۟ يَفْعَلُونَ"
    }
  ]
}