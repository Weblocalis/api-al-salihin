  "nom": {
    "ar": "التكاثر",
    "phonetique": "At-Takathur",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "أَلْهَىٰكُمُ ٱلتَّكَاثُرُ"
    },
    {
      "numero": 2,
      "texte_ar": "حَتَّىٰ زُرْتُمُ ٱلْمَقَابِرَ"
    },
    {
      "numero": 3,
      "texte_ar": "كَلَّا سَوْفَ تَعْلَمُونَ"
    },
    {
      "numero": 4,
      "texte_ar": "ثُمَّ كَلَّا سَوْفَ تَعْلَمُونَ"
    },
    {
      "numero": 5,
      "texte_ar": "كَلَّا لَوْ تَعْلَمُونَ عِلْمَ ٱلْيَقِينِ"
    },
    {
      "numero": 6,
      "texte_ar": "لَتَرَوُنَّ ٱلْجَحِيمَ"
    },
    {
      "numero": 7,
      "texte_ar": "ثُمَّ لَتَرَوُنَّهَا عَيْنَ ٱلْيَقِينِ"
    },
    {
      "numero": 8,
      "texte_ar": "ثُمَّ لَتُسْـَٔلُنَّ يَوْمَئِذٍ عَنِ ٱلنَّعِيمِ"
    }
  ]
}