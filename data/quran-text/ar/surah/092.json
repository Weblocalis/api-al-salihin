{
  "id": 92,
  "nom": {
    "ar": "الليل",
    "phonetique": " al-Lail ",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَٱلَّيْلِ إِذَا يَغْشَىٰ"
    },
    {
      "numero": 2,
      "texte_ar": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ"
    },
    {
      "numero": 3,
      "texte_ar": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ"
    },
    {
      "numero": 4,
      "texte_ar": "إِنَّ سَعْيَكُمْ لَشَتَّىٰ"
    },
    {
      "numero": 5,
      "texte_ar": "فَأَمَّا مَنْ أَعْطَىٰ وَٱتَّقَىٰ"
    },
    {
      "numero": 6,
      "texte_ar": "وَصَدَّقَ بِٱلْحُسْنَىٰ"
    },
    {
      "numero": 7,
      "texte_ar": "فَسَنُيَسِّرُهُۥ لِلْيُسْرَىٰ"
    },
    {
      "numero": 8,
      "texte_ar": "وَأَمَّا مَنۢ بَخِلَ وَٱسْتَغْنَىٰ"
    },
    {
      "numero": 9,
      "texte_ar": "وَكَذَّبَ بِٱلْحُسْنَىٰ"
    },
    {
      "numero": 10,
      "texte_ar": "فَسَنُيَسِّرُهُۥ لِلْعُسْرَىٰ"
    },
    {
      "numero": 11,
      "texte_ar": "وَمَا يُغْنِى عَنْهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ"
    },
    {
      "numero": 12,
      "texte_ar": "إِنَّ عَلَيْنَا لَلْهُدَىٰ"
    },
    {
      "numero": 13,
      "texte_ar": "وَإِنَّ لَنَا لَلْءَاخِرَةَ وَٱلْأُولَىٰ"
    },
    {
      "numero": 14,
      "texte_ar": "فَأَنذَرْتُكُمْ نَارًۭا تَلَظَّىٰ"
    },
    {
      "numero": 15,
      "texte_ar": "لَا يَصْلَىٰهَآ إِلَّا ٱلْأَشْقَى"
    },
    {
      "numero": 16,
      "texte_ar": "ٱلَّذِى كَذَّبَ وَتَوَلَّىٰ"
    },
    {
      "numero": 17,
      "texte_ar": "وَسَيُجَنَّبُهَا ٱلْأَتْقَى"
    },
    {
      "numero": 18,
      "texte_ar": "ٱلَّذِى يُؤْتِى مَالَهُۥ يَتَزَكَّىٰ"
    },
    {
      "numero": 19,
      "texte_ar": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعْمَةٍۢ تُجْزَىٰٓ"
    },
    {
      "numero": 20,
      "texte_ar": "إِلَّا ٱبْتِغَآءَ وَجْهِ رَبِّهِ ٱلْأَعْلَىٰ"
    },
    {
      "numero": 21,
      "texte_ar": "وَلَسَوْفَ يَرْضَىٰ"
    }
  ]
}