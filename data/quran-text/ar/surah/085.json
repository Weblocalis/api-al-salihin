  "id": 85,
  "nom": {
    "ar": "البروج",
    "phonetique": "al-Buruj",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَٱلسَّمَآءِ ذَاتِ ٱلْبُرُوجِ"
    },
    {
      "numero": 2,
      "texte_ar": "وَٱلْيَوْمِ ٱلْمَوْعُودِ"
    },
    {
      "numero": 3,
      "texte_ar": "وَشَاهِدٍۢ وَمَشْهُودٍۢ"
    },
    {
      "numero": 4,
      "texte_ar": "قُتِلَ أَصْحَٰبُ ٱلْأُخْدُودِ"
    },
    {
      "numero": 5,
      "texte_ar": "ٱلنَّارِ ذَاتِ ٱلْوَقُودِ"
    },
    {
      "numero": 6,
      "texte_ar": "إِذْ هُمْ عَلَيْهَا قُعُودٌۭ"
    },
    {
      "numero": 7,
      "texte_ar": "وَهُمْ عَلَىٰ مَا يَفْعَلُونَ بِٱلْمُؤْمِنِينَ شُهُودٌۭ"
    },
    {
      "numero": 8,
      "texte_ar": "وَمَا نَقَمُوا۟ مِنْهُمْ إِلَّآ أَن يُؤْمِنُوا۟ بِٱللَّهِ ٱلْعَزِيزِ ٱلْحَمِيدِ"
    },
    {
      "numero": 9,
      "texte_ar": "ٱلَّذِى لَهُۥ مُلْكُ ٱلسَّمَٰوَٰتِ وَٱلْأَرْضِ ۚ وَٱللَّهُ عَلَىٰ كُلِّ شَىْءٍۢ شَهِيدٌ"
    },
    {
      "numero": 10,
      "texte_ar": "إِنَّ ٱلَّذِينَ فَتَنُوا۟ ٱلْمُؤْمِنِينَ وَٱلْمُؤْمِنَٰتِ ثُمَّ لَمْ يَتُوبُوا۟ فَلَهُمْ عَذَابُ جَهَنَّمَ وَلَهُمْ عَذَابُ ٱلْحَرِيقِ"
    },
    {
      "numero": 11,
      "texte_ar": "إِنَّ ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّٰلِحَٰتِ لَهُمْ جَنَّٰتٌۭ تَجْرِى مِن تَحْتِهَا ٱلْأَنْهَٰرُ ۚ ذَٰلِكَ ٱلْفَوْزُ ٱلْكَبِيرُ"
    },
    {
      "numero": 12,
      "texte_ar": "إِنَّ بَطْشَ رَبِّكَ لَشَدِيدٌ"
    },
    {
      "numero": 13,
      "texte_ar": "إِنَّهُۥ هُوَ يُبْدِئُ وَيُعِيدُ"
    },
    {
      "numero": 14,
      "texte_ar": "وَهُوَ ٱلْغَفُورُ ٱلْوَدُودُ"
    },
    {
      "numero": 15,
      "texte_ar": "ذُو ٱلْعَرْشِ ٱلْمَجِيدُ"
    },
    {
      "numero": 16,
      "texte_ar": "فَعَّالٌۭ لِّمَا يُرِيدُ"
    },
    {
      "numero": 17,
      "texte_ar": "هَلْ أَتَىٰكَ حَدِيثُ ٱلْجُنُودِ"
    },
    {
      "numero": 18,
      "texte_ar": "فِرْعَوْنَ وَثَمُودَ"
    },
    {
      "numero": 19,
      "texte_ar": "بَلِ ٱلَّذِينَ كَفَرُوا۟ فِى تَكْذِيبٍۢ"
    },
    {
      "numero": 20,
      "texte_ar": "وَٱللَّهُ مِن وَرَآئِهِم مُّحِيطٌۢ"
    },
    {
      "numero": 21,
      "texte_ar": "بَلْ هُوَ قُرْءَانٌۭ مَّجِيدٌۭ"
    },
    {
      "numero": 22,
      "texte_ar": "فِى لَوْحٍۢ مَّحْفُوظٍۭ"
    }
  ]
}