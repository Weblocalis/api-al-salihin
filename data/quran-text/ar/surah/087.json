{
  "id": 87,
  "nom": {
    "ar": "الأعلى",
    "phonetique": "al-A'la",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "سَبِّحِ ٱسْمَ رَبِّكَ ٱلْأَعْلَى"
    },
    {
      "numero": 2,
      "texte_ar": "ٱلَّذِى خَلَقَ فَسَوَّىٰ"
    },
    {
      "numero": 3,
      "texte_ar": "وَٱلَّذِى قَدَّرَ فَهَدَىٰ"
    },
    {
      "numero": 4,
      "texte_ar": "وَٱلَّذِىٓ أَخْرَجَ ٱلْمَرْعَىٰ"
    },
    {
      "numero": 5,
      "texte_ar": "فَجَعَلَهُۥ غُثَآءً أَحْوَىٰ"
    },
    {
      "numero": 6,
      "texte_ar": "سَنُقْرِئُكَ فَلَا تَنسَىٰٓ"
    },
    {
      "numero": 7,
      "texte_ar": "إِلَّا مَا شَآءَ ٱللَّهُ ۚ إِنَّهُۥ يَعْلَمُ ٱلْجَهْرَ وَمَا يَخْفَىٰ"
    },
    {
      "numero": 8,
      "texte_ar": "وَنُيَسِّرُكَ لِلْيُسْرَىٰ"
    },
    {
      "numero": 9,
      "texte_ar": "فَذَكِّرْ إِن نَّفَعَتِ ٱلذِّكْرَىٰ"
    },
    {
      "numero": 10,
      "texte_ar": "سَيَذَّكَّرُ مَن يَخْشَىٰ"
    },
    {
      "numero": 11,
      "texte_ar": "وَيَتَجَنَّبُهَا ٱلْأَشْقَى"
    },
    {
      "numero": 12,
      "texte_ar": "ٱلَّذِى يَصْلَى ٱلنَّارَ ٱلْكُبْرَىٰ"
    },
    {
      "numero": 13,
      "texte_ar": "ثُمَّ لَا يَمُوتُ فِيهَا وَلَا يَحْيَىٰ"
    },
    {
      "numero": 14,
      "texte_ar": "قَدْ أَفْلَحَ مَن تَزَكَّىٰ"
    },
    {
      "numero": 15,
      "texte_ar": "وَذَكَرَ ٱسْمَ رَبِّهِۦ فَصَلَّىٰ"
    },
    {
      "numero": 16,
      "texte_ar": "بَلْ تُؤْثِرُونَ ٱلْحَيَوٰةَ ٱلدُّنْيَا"
    },
    {
      "numero": 17,
      "texte_ar": "وَٱلْءَاخِرَةُ خَيْرٌۭ وَأَبْقَىٰٓ"
    },
    {
      "numero": 18,
      "texte_ar": "إِنَّ هَٰذَا لَفِى ٱلصُّحُفِ ٱلْأُولَىٰ"
    },
    {
      "numero": 19,
      "texte_ar": "صُحُفِ إِبْرَٰهِيمَ وَمُوسَىٰ"
    }
  ]
}