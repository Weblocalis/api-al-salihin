{
  "id": 99,
  "nom": {
    "ar": "الزلزلة",
    "phonetique": "al-Zalzalah",
    "fr": "",
    "en": ""
  },
  "type": "Madaniyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "إِذَا زُلْزِلَتِ ٱلْأَرْضُ زِلْزَالَهَا"
    },
    {
      "numero": 2,
      "texte_ar": "وَأَخْرَجَتِ ٱلْأَرْضُ أَثْقَالَهَا"
    },
    {
      "numero": 3,
      "texte_ar": "وَقَالَ ٱلْإِنسَٰنُ مَا لَهَا"
    },
    {
      "numero": 4,
      "texte_ar": "يَوْمَئِذٍۢ تُحَدِّثُ أَخْبَارَهَا"
    },
    {
      "numero": 5,
      "texte_ar": "بِأَنَّ رَبَّكَ أَوْحَىٰ لَهَا"
    },
    {
      "numero": 6,
      "texte_ar": "يَوْمَئِذٍۢ يَصْدُرُ ٱلنَّاسُ أَشْتَاتًۭا لِّيُرَوْا۟ أَعْمَٰلَهُمْ"
    },
    {
      "numero": 7,
      "texte_ar": "فَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ خَيْرًۭا يَرَهُۥ"
    },
    {
      "numero": 8,
      "texte_ar": "وَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍۢ شَرًّۭا يَرَهُۥ"
    }
  ]
}