{
  "id": 91,
  "nom": {
    "ar": "الشمس",
    "phonetique": "Ash-Shams",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "وَٱلشَّمْسِ وَضُحَىٰهَا"
    },
    {
      "numero": 2,
      "texte_ar": "وَٱلْقَمَرِ إِذَا تَلَىٰهَا"
    },
    {
      "numero": 3,
      "texte_ar": "وَٱلنَّهَارِ إِذَا جَلَّىٰهَا"
    },
    {
      "numero": 4,
      "texte_ar": "وَٱلَّيْلِ إِذَا يَغْشَىٰهَا"
    },
    {
      "numero": 5,
      "texte_ar": "وَٱلسَّمَآءِ وَمَا بَنَىٰهَا"
    },
    {
      "numero": 6,
      "texte_ar": "وَٱلْأَرْضِ وَمَا طَحَىٰهَا"
    },
    {
      "numero": 7,
      "texte_ar": "وَنَفْسٍۢ وَمَا سَوَّىٰهَا"
    },
    {
      "numero": 8,
      "texte_ar": "فَأَلْهَمَهَا فُجُورَهَا وَتَقْوَىٰهَا"
    },
    {
      "numero": 9,
      "texte_ar": "قَدْ أَفْلَحَ مَن زَكَّىٰهَا"
    },
    {
      "numero": 10,
      "texte_ar": "وَقَدْ خَابَ مَن دَسَّىٰهَا"
    },
    {
      "numero": 11,
      "texte_ar": "كَذَّبَتْ ثَمُودُ بِطَغْوَىٰهَآ"
    },
    {
      "numero": 12,
      "texte_ar": "إِذِ ٱنۢبَعَثَ أَشْقَىٰهَا"
    },
    {
      "numero": 13,
      "texte_ar": "فَقَالَ لَهُمْ رَسُولُ ٱللَّهِ نَاقَةَ ٱللَّهِ وَسُقْيَٰهَا"
    },
    {
      "numero": 14,
      "texte_ar": "فَكَذَّبُوهُ فَعَقَرُوهَا فَدَمْدَمَ عَلَيْهِمْ رَبُّهُم بِذَنۢبِهِمْ فَسَوَّىٰهَا"
    },
    {
      "numero": 15,
      "texte_ar": "وَلَا يَخَافُ عُقْبَٰهَا"
    }
  ]
}