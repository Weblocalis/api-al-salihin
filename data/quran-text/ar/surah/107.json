{
  "id": 107,
  "nom": {
    "ar": "الماعون",
    "phonetique": "al-Ma'un",
    "fr": "",
    "en": ""
  },
  "type": "Makkiyah",
  "versets": [
    {
      "numero": 1,
      "texte_ar": "أَرَءَيْتَ ٱلَّذِى يُكَذِّبُ بِٱلدِّينِ"
    },
    {
      "numero": 2,
      "texte_ar": "فَذَٰلِكَ ٱلَّذِى يَدُعُّ ٱلْيَتِيمَ"
    },
    {
      "numero": 3,
      "texte_ar": "وَلَا يَحُضُّ عَلَىٰ طَعَامِ ٱلْمِسْكِينِ"
    },
    {
      "numero": 4,
      "texte_ar": "فَوَيْلٌۭ لِّلْمُصَلِّينَ"
    },
    {
      "numero": 5,
      "texte_ar": "ٱلَّذِينَ هُمْ عَن صَلَاتِهِمْ سَاهُونَ"
    },
    {
      "numero": 6,
      "texte_ar": "ٱلَّذِينَ هُمْ يُرَآءُونَ"
    },
    {
      "numero": 7,
      "texte_ar": "وَيَمْنَعُونَ ٱلْمَاعُونَ"
    }
  ]
}